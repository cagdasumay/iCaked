            $("#back-btn").attr("href", "/Map/Delete?id=" + type);
        });

        //$(".delete-type2").click(function () {
        //    var deleteuser = $(this).attr("data-td");
        //    $("." + $(this).attr("data-td")).slideToggle(200);
        //});

    });

</script>

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        @{
            String photo = "../Images/Users/" + attendee.Id + ".jpg";
        }
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("AttendersOrg", "Users")">Katılımcılar</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@attendee.Name @attendee.Surname</span>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h1 class="page-title" style="float: left;">
                    @attendee.Name @attendee.Surname
                </h1>
                <h1>
                    <a href="@Url.Action("AttendersOrg", "Users")" style="float: right;" class="btn green">
                        Listeye Dön
                        <i class="fa fa-arrow-left"></i>
                    </a>
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar ">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet stories-cont ">
                        <!-- SIDEBAR USERPIC -->

                        <div class="profile-userpic photo mt-card-round">
                            <img src="@photo" class="img-responsive" alt="">
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name"> @attendee.Name @attendee.Surname </div>
                            <div class="profile-usertitle-job"> @attendee.Company </div>
                            <div class="profile-usertitle-job"> @attendee.PersonelTitle </div>
                        </div>
                        
                        @{ 
                            String deleteuser = "hidden-td1";
                        }

                        <div class="profile-userbuttons editDeleteButtons">
                            <a href="@Url.Action("EditAttender", "Users", new { AttenderId = @attendee.Id })" type="button" class="btn btn-circle green btn-sm">
                                Düzenle
                                <i class="fa fa-pencil"></i>
                            </a>
                            <div data-td="@deleteuser" onclick="$(this).parent().slideUp(200); $('.editDeleteConfirm').slideDown(200); " class="btn btn-circle red btn-sm delete-type2" style="background-color: #ed6b75 !important; cursor: pointer;">
                                Sil
                                <i class="fa fa-times"></i>
                            </div>
                        </div>

                        <div class="display-none editDeleteConfirm @deleteuser">
                            <div style="float: left; margin-top: 8px; margin-bottom:8px; text-align:center; width: 100%;">
                                Silmek istediğinize emin misiniz?
                            </div>
                        </div>
                        <div class="display-none editDeleteConfirm profile-userbuttons @deleteuser">
                            <a href="@Url.Action("DeleteAttender", "Account", new { UserID = @attendee.Id })" class="btn btn-circle red btn-sm" style="background-color: #ed6b75 !important;">
                                Evet
                            </a>
                            <div onclick="$(this).parent().hide(200); $('.editDeleteConfirm').hide(200); $('.editDeleteButtons').slideDown(200)" type="button" class="btn btn-circle green btn-sm">
                                Hayır
                            </div>
                        </div>

                        <!-- END SIDEBAR BUTTONS -->
                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li>
                                    @{
                                        if (attendee.Facebook == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-facebook"></i> Facebook
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@attendee.Facebook" target="_blank">
                                                <i class="icon-social-facebook"></i> Facebook
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (attendee.Twitter == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-twitter"></i> Twitter
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@attendee.Twitter" target="_blank">
                                                <i class="icon-social-twitter"></i> Twitter
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (attendee.Instagram == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-youtube"></i> Instagram
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@attendee.Instagram" target="_blank">
                                                <i class="icon-social-youtube"></i> Instagram
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (attendee.Linkedin == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-tumblr"></i> Linkedin
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@attendee.Linkedin" target="_blank">
                                                <i class="icon-social-tumblr"></i> Linkedin
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (attendee.Website == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-dribbble"></i> Website
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@attendee.Website" target="_blank">
                                                <i class="icon-social-dribbble"></i> Website
                                            </a>
                                        }
                                    }
                                </li>
                            </ul>
                        </div>
                        <!-- END MENU -->
                    </div>
                </div>

                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="portlet light " style="padding-bottom: 25px;">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="icon-social-twitter font-dark hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">@attendee.Name aşağıdaki oturumlara katılacak</span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <div class="tab-content">
                                        <div>
                                            <div class="mt-actions">

                                                @{
                                                    if (Activities.Count == 0)
                                                    {
                                                        <div class="mt-action">
                                                            <div class="mt-action-body" style="padding-left: 0px;">
                                                                <div class="mt-action-row">
                                                                    <div class="mt-action-details ">
                                                                        <span class="mt-action-author bold" style="">@attendee.Name şu ana kadar bir oturuma kayıt yapmadı.</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    }
                                                    else
                                                    {
                                                        for (int i = Activities.Count - 1; i >= 0; i--)
                                                        {
                                                            <div class="mt-action">
                                                                <div class="mt-action-body" style="padding-left: 0px;">
                                                                    <div class="mt-action-row">
                                                                        <div class="mt-action-info ">
                                                                            @{
                                                                                if (ActivityType[i] == "Konferans")
                                                                                {
                                                                                    <div class="mt-action-icon ">
                                                                                        <i class="icon-users"></i>
                                                                                    </div>
                                                                                }
                                                                                else if (ActivityType[i] == "Sunum")
                                                                                {
                                                                                    <div class="mt-action-icon ">
                                                                                        <i class="icon-bubbles"></i>
                                                                                    </div>
                                                                                }
                                                                                else if (ActivityType[i] == "Kahve Molası-Yemek-Parti")
                                                                                {
                                                                                    <div class="mt-action-icon ">
                                                                                        <i class="fa fa-glass"></i>
                                                                                    </div>
                                                                                }
                                                                                else if (ActivityType[i] == "Panel")
                                                                                {
                                                                                    <div class="mt-action-icon ">
                                                                                        <i class="fa fa-cubes"></i>
                                                                                    </div>
                                                                                }
                                                                            }


                                                                            <div class="mt-action-details ">
                                                                                <span class="mt-action-author">@attendee.Name</span>
                                                                                <p class="mt-action-desc">
                                                                                    <a style="color: #ed6b75 !important;" href="@Url.Action("DetailsFromAgenda", "AgendaEventActivities", new { IDofActivity = @Activities[i].Id })">
                                                                                        @Activities[i].Name
                                                                                    </a>
                                                                                    etkniliğine kayıt gerçekleştirdi.
                                                                                </p>
                                                                                <p style="padding-top: 3px; margin-bottom: 0px;">@Activities[i].Summary</p>
                                                                            </div>
                                                                        </div>
                                                                        <div class="mt-action-datetime " style="margin-left: 27px;">
                                                                            <span class="mt-action-date">@AttemptDay[i]</span>
                                                                            <span class="mt-action-dot bg-green"></span>
                                                                            <span class="mt=action-time">@AttemptTimes[i]</span>
                                                                        </div>

                                                                    </div>

                                                                </div>
                                                            </div>
                                                                                    }
                                                                                }
                                                }

                                            </div>
                                            <!-- END: Actions -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

