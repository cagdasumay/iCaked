@using EventApp.Models

@{
    ViewBag.Title = "Katılımcılar";
    User attendee = (User)ViewData["Attenderdetails"];
    List<Activity> Activities = (List<Activity>)ViewData["Activities"];
    List<string> AttemptDay = (List<string>)ViewData["AttemptDay"];
    List<string> AttemptTimes = (List<string>)ViewData["AttemptTimes"];
    List<string> ActivityType = (List<string>)ViewData["ActivityType"];
}

<link href="../assets/pages/css/about.css" rel="stylesheet" type="text/css" />

<script src="~/scripts/jquery-1.10.2.min.js"></script>

