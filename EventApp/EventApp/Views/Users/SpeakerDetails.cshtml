@using EventApp.Models

@{
    ViewBag.Title = "Konuşmacılar";
    User speaker = (User)ViewData["SpeakerDetails"];

    List<Activity> SpeakerSessions = (List<Activity>)ViewData["SpeakerSessions"];
    List<bool> isScheduled = (List<bool>)ViewData["isScheduled"];

    List<string> times = (List<string>)ViewData["StartEndTimes"];
    List<string> StartDate = (List<string>)ViewData["StartDate"];
}

<link href="../assets/pages/css/about.css" rel="stylesheet" type="text/css" />

<div class="page-content-wrapper" style="min-height: 700px !important;">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 700px !important;">
        @{
            String photo = "../Images/Users/" + speaker.Id + ".jpg";
        }
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Speakers", "Users")">Konuşmacılar</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@speaker.Name @speaker.Surname</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            @speaker.Name @speaker.Surname
        </h1>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet stories-cont ">
                        <!-- SIDEBAR USERPIC -->

                        <div class="profile-userpic photo mt-card-round">
                            <img src="@photo" class="img-responsive" alt="">
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name"> @speaker.Name @speaker.Surname </div>
                            <div class="profile-usertitle-job"> @speaker.Company </div>
                            <div class="profile-usertitle-job"> @speaker.PersonelTitle </div>
                        </div>
                        <!-- END SIDEBAR USER TITLE -->
                        <!-- SIDEBAR BUTTONS -->
                        <div class="profile-userbuttons">
                            <div type="button" class="btn btn-circle red btn-sm" style="background-color: #ed6b75 !important; cursor: default;">
                                Mesaj Gönder
                                <i class="fa fa-envelope"></i>
                            </div>
                            
                        </div>
                        <!-- END SIDEBAR BUTTONS -->
                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li>
                                    @{
                                        if (speaker.Facebook == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-facebook-square" style="margin-right: 9px;"></i> Facebook
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Facebook" target="_blank">
                                                <i class="fa fa-facebook-square"></i> Facebook
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Twitter == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-twitter" style="margin-right: 9px;"></i> Twitter
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Twitter" target="_blank">
                                                <i class="icon-social-twitter"></i> Twitter
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Instagram == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-instagram" style="margin-right: 9px;"></i> Instagram
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Instagram" target="_blank">
                                                <i class="fa fa-instagram"></i> Instagram
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Linkedin == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-linkedin-square" style="margin-right: 9px;"></i> Linkedin
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Linkedin" target="_blank">
                                                <i class="fa fa-linkedin-square"></i> Linkedin
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Website == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-globe" style="margin-right: 9px;"></i> Website
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Website" target="_blank">
                                                <i class="fa fa-globe"></i> Website
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                        <i class="fa fa-youtube" style="margin-right: 9px;"></i> Youtube
                                    </div>
                                </li>
                                <li>
                                    <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                        <i class="fa fa-google-plus" style="margin-right: 9px;"></i> Google+
                                    </div>
                                </li>
                                <li>
                                    <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                        <i class="fa fa-pinterest-p" style="margin-right: 9px;"></i> Pinterest
                                    </div>
                                </li>
                                <li>
                                    <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                        <i class="fa fa-tumblr-square" style="margin-right: 9px;"></i> Tumblr
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <!-- END MENU -->
                    </div>
                </div>

                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12" style="padding-right: 0px;">
                            <!-- BEGIN PORTLET -->
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption caption-md">
                                        <i class="icon-bar-chart theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">Hakkında</span>
                                        <span class="caption-helper hide">weekly stats...</span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <p> @speaker.About </p>
                                </div>
                            </div>
                            <!-- END PORTLET -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- BEGIN PORTLET -->
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption caption-md">
                                        <i class="icon-bar-chart theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">Oturumlar</span>
                                    </div>
                                </div>
                                @{
                                    int count = SpeakerSessions.Count;
                                    if (count > 0)
                                    {
                                        for (int i = 0; i < SpeakerSessions.Count; i++)
                                        {
                                            <div style="border: 2px dashed #578ebe; padding: 5px; margin-bottom: 10px; width: 100%;">

                                                <div style="margin-bottom: 5px">
                                                    <a href="@Url.Action("DetailsFromAgenda", "AgendaEventActivities", new { IDofActivity = SpeakerSessions[i].Id })" class="title">
                                                        <div style="font-size: 18px;">
                                                            @SpeakerSessions[i].Name
                                                            <div class="list-datetime" style="float: right !important; font-size: 14px; color: #333;">
                                                                @{
                                                                    if (SpeakerSessions[i].EndDate == "Konferans")
                                                                    {
                                                                        <div>Konferans</div>
                                                                    }
                                                                    else if (SpeakerSessions[i].EndDate == "Sunum")
                                                                    {
                                                                        <div>Sunum</div>
                                                                    }
                                                                    else if (SpeakerSessions[i].EndDate == "Panel")
                                                                    {
                                                                        <div>Panel</div>
                                                                    }
                                                                }
                                                            </div>
                                                        </div>

                                                    </a>

                                                </div>
                                                <div class="portlet-body" style="padding-top: 0;">
                                                    <div>
                                                        <div class="mt-list-container">
                                                            <div class="mt-list-item" style="border-top: 1px solid #e7ecf1; border-bottom: 1px solid #e7ecf1;">
                                                                @{
                                                                    if (SpeakerSessions[i].IsActive == true)
                                                                    {
                                                                        if (isScheduled[i] == true)
                                                                        {
                                                                            <div class="list-datetime" style="margin-top: 5px;">
                                                                                <i class="fa fa-calendar-check-o"></i>
                                                                                @StartDate[i]
                                                                                <i class="fa fa-clock-o"></i>
                                                                                @times[i]
                                                                            </div>
                                                                            <div style="color:#68717d;">
                                                                                <h5>@SpeakerSessions[i].Summary</h5>
                                                                            </div>
                                                                            <div style="text-align: center; width: 100%;">
                                                                                <label style="color: #578ebe; margin-bottom: 0;">
                                                                                    <i class="fa fa-check"></i>
                                                                                    Kayıt Yapıldı
                                                                                </label>
                                                                                <a href="@Url.Action("CancelFromSpeakerDetails", "AgendaEventActivities", new { IDofActivity = @SpeakerSessions[i].Id, Speaker = speaker.Id })" style="color: #ed6b75; margin-left: 15px;">
                                                                                    <i class="fa fa-times"></i>
                                                                                    Kaydı Sil
                                                                                </a>
                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <div class="list-datetime" style="margin-top: 5px;">
                                                                                <i class="fa fa-calendar-plus-o"></i>
                                                                                @StartDate[i]
                                                                                <i class="fa fa-clock-o"></i>
                                                                                @times[i]
                                                                            </div>
                                                                            <div style="color:#68717d;">
                                                                                <h5>@SpeakerSessions[i].Summary</h5>
                                                                            </div>
                                                                            <div style="text-align: center; width: 100%;">
                                                                                <a href="@Url.Action("AddFromSpeakerDetails", "AgendaEventActivities", new { IDofActivity = @SpeakerSessions[i].Id, Speaker = speaker.Id })" style="text-align: center; width: 100%; color: #578ebe;">
                                                                                    <i class="fa fa-plus"></i>
                                                                                    Ajandama Ekle
                                                                                </a>
                                                                            </div>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="list-datetime" style="margin-top: 5px;">
                                                                            <i class="fa fa-calendar-times-o"></i>
                                                                            @StartDate[i]
                                                                            <i class="fa fa-clock-o"></i>
                                                                            @times[i]
                                                                        </div>
                                                                        <div style="color:#68717d;">
                                                                            <h5>@SpeakerSessions[i].Summary</h5>
                                                                        </div>
                                                                        <div style="text-align: center; width: 100%;">
                                                                            <label style="color: #ed6b75; width: 100%; margin-bottom: 0;">
                                                                                <i class="fa fa-warning"></i>
                                                                                Bu oturum iptal edildi
                                                                            </label>
                                                                        </div>
                                                                    }

                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                                                        }

                                                                    }
                                }

                            </div>

                        </div>
                    </div>

                </div>
                <!-- END PROFILE CONTENT -->
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

<!-- BEGIN CORE PLUGINS -->
<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
