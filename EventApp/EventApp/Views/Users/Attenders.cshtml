@model EventApp.Models.User
@using EventApp.Models

@{
    ViewBag.Title = "Katılımcılar";
    List<User> AttenderList = (List<User>)ViewData["AttenderList"];
    int CountAttender = AttenderList.Count;
    string EventName = (string)ViewData["EventName"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Attenders", "Users")">Katılımcılar</a>
                </li>
            </ul>
        </div>

        <h1 class="page-title" style="float: left;">
            @EventName
            <small>Katılımcı Listesi</small>
        </h1>

        <div class="row">
            <div class="col-md-12 col-sm-12 col xs-12">
                <!-- BEGIN TODO SIDEBAR -->
                <div class="todo-ui">
                    <!-- END TODO SIDEBAR -->
                    <!-- BEGIN TODO CONTENT -->
                    <div class="todo-content">
                        <div class="portlet light " style="padding-bottom: 0px !important;">
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="todo-tasklist">
                                        @{
                                            for (int i = 0; i < CountAttender; i++)
                                            {
                                                String photo = "../Images/Users/" + AttenderList[i].Id + ".jpg";
                                                <div class="col-md-4 col-sm-6 col xs-12">
                                                    <div class="todo-tasklist-item todo-tasklist-item-border-green" style="padding-bottom: 0px !important; margin-bottom: 15px;">
                                                        <a href="@Url.Action("AttenderDetails","Users",new { usrdet = AttenderList[i].Id })">
                                                            <img class="todo-userpic pull-left" src="@photo" width="90px" height="90px">
                                                        </a>
                                                        <div class="todo-tasklist-item-title">
                                                            <a href="@Url.Action("AttenderDetails","Users",new { usrdet = AttenderList[i].Id })">
                                                                @Html.DisplayFor(modelItem => AttenderList[i].Name) @Html.DisplayFor(modelItem => AttenderList[i].Surname)
                                                            </a>
                                                        </div>
                                                        @{
                                                            if (AttenderList[i].PersonelTitle != null)
                                                            {
                                                                <div class="todo-tasklist-item-text">
                                                                    @Html.DisplayFor(modelItem => AttenderList[i].PersonelTitle)
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="todo-tasklist-item-text">
                                                                    ...
                                                                </div>
                                                            }
                                                        }
                                                        @{
                                                            if (AttenderList[i].Company != null)
                                                            {
                                                                <div class="todo-tasklist-item-text">
                                                                    @Html.DisplayFor(modelItem => AttenderList[i].Company)
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="todo-tasklist-item-text">
                                                                    ...
                                                                </div>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                                            }
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END TODO CONTENT -->
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    </div>
</div>
<!-- END CONTENT BODY -->
</div>

