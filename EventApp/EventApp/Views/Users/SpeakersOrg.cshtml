@model EventApp.Models.User
@using EventApp.Models

@{
    ViewBag.Title = "Konuşmacılar";
    List<User> SpeakerList = (List<User>)ViewData["SpeakerList"];
    int CountSpeaker = SpeakerList.Count;
    string EventName = (string)ViewData["EventName"];
}

<link href="../assets/pages/css/about.css" rel="stylesheet" type="text/css" />

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("SpeakersOrg", "Users")">Konuşmacılar</a>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h1 class="page-title" style="float: left;">
                    @EventName
                    <small>Konuşmacı Listesi</small>
                </h1>
                <h1>
                    <a href="@Url.Action("NewSpeaker", "Account")" style="float: right;" class="btn green">
                        Konuşmacı Ekle
                        <i class="fa fa-plus"></i>
                    </a>
                </h1>
            </div>
        </div>

        <div class="row margin-bottom-0 stories-cont ">

            @{
                for (int i = 0; i < CountSpeaker; i++)
                {
                    String photo = "../Images/Users/" + SpeakerList[i].Id + ".jpg";

                    <div class="col-lg-3 col-sm-4 col-md-4">
                        <div class="portlet light">
                            <a href="@Url.Action("SpeakerDetailsOrg","Users",new { sprdet = SpeakerList[i].Id })" class="photo mt-card-round">
                                <img src="@photo" alt="" class="img-responsive" />
                            </a>
                            <a href="@Url.Action("SpeakerDetailsOrg","Users",new { sprdet = SpeakerList[i].Id })" class="title">
                                <div style="font-size: 18px;"><b>@Html.DisplayFor(modelItem => SpeakerList[i].Name) @Html.DisplayFor(modelItem => SpeakerList[i].Surname)</b></div>
                            </a>
                            <div style="text-align: center; line-height: 6px;">
                                <p>@Html.DisplayFor(modelItem => SpeakerList[i].PersonelTitle)</p>
                                <p>@Html.DisplayFor(modelItem => SpeakerList[i].Company)</p>
                            </div>

                            <div class="mt-card-content" style="width: 100%; text-align:center;">
                                <div class="mt-card-social">
                                    <ul style="padding-left: 0px !important;">
                                        @{
                                            if (SpeakerList[i].Facebook == null)
                                            {
                                                <a>
                                                    <i class="icon-social-facebook"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@SpeakerList[i].Facebook">
                                                    <i class="icon-social-facebook"></i>
                                                </a>
                                            }
                                        }
                                        @{
                                            if (SpeakerList[i].Twitter == null)
                                            {
                                                <a>
                                                    <i class="icon-social-twitter"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@SpeakerList[i].Twitter">
                                                    <i class="icon-social-twitter"></i>
                                                </a>
                                            }
                                        }
                                        @{
                                            if (SpeakerList[i].Instagram == null)
                                            {
                                                <a>
                                                    <i class="icon-social-youtube"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@SpeakerList[i].Instagram">
                                                    <i class="icon-social-youtube"></i>
                                                </a>
                                            }
                                        }
                                        @{
                                            if (SpeakerList[i].Linkedin == null)
                                            {
                                                <a>
                                                    <i class="icon-social-tumblr"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@SpeakerList[i].Linkedin">
                                                    <i class="icon-social-tumblr"></i>
                                                </a>
                                            }
                                        }
                                        @{
                                            if (SpeakerList[i].Website == null)
                                            {
                                                <a>
                                                    <i class="icon-social-dribbble"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@SpeakerList[i].Website">
                                                    <i class="icon-social-dribbble"></i>
                                                </a>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>
                                            }
            }
        </div>

    </div>
    <!-- END CONTENT BODY -->
</div>


