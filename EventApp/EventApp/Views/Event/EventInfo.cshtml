@using EventApp.Models

@{
    ViewBag.Title = "Events";
    Event eventdetails = (Event)Session["eventdetails"];
    String Location = (String)Session["LocationName"];
    int ScheduleResult = (int)Session["ScheduleResult"];

    List<Event> ConferenceList = (List<Event>)Session["SpeakersConferenceList"];
    List<Event> MeetingList = (List<Event>)Session["SpeakersMeetingList"];
    List<Event> PresentationList = (List<Event>)Session["SpeakersPresentationList"];
}

<link href="../assets/pages/css/about.css" rel="stylesheet" type="text/css" />

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html">Event</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Details</span>
                </li>
            </ul>
        </div>

        <h1 class="page-title">
            @eventdetails.Name
        </h1>

        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet stories-cont " style="text-align: center;">
                        <div class="profile-usertitle" style="color: #578ebe; font-size: 20px; text-align: center; width: auto;"><b>@eventdetails.Name</b></div>
                        <div class="profile-usertitle">
                            
                            <div style="line-height: 35px;">
                                <i class="fa fa-calendar-o"></i>
                                Start: @eventdetails.StartDate
                            </div>
                            <div style="line-height: 35px;">
                                <i class="fa fa-calendar-o"></i>
                                End: @eventdetails.EndDate
                            </div>
                            @{
                                if (@Location != null)
                                {
                                    <div style="line-height: 35px;">
                                        <a style="color: #333;" href="@Url.Action("MapDetails","Map",new { mapdet = @eventdetails.Place })">
                                            <i class="fa fa-location-arrow"></i> Location: @Location
                                            <i style="color: #337ab7;" class="fa fa-arrow-circle-o-right"></i>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div style="line-height: 35px;">
                                        <div style="color: #333;">
                                            <i class="fa fa-location-arrow"></i> Location: Not Assigned
                                        </div>
                                    </div>
                                }
                            }
                            
                            <div style="line-height: 35px;">
                                @{
                                    if (@eventdetails.EventType == 1)
                                    {
                                        <div><i class="fa fa-check"></i>Type: Conference</div>
                                    }
                                    else if (@eventdetails.EventType == 2)
                                    {
                                        <div><i class="fa fa-check"></i>Type: Meeting</div>
                                    }
                                    else if (@eventdetails.EventType == 3)
                                    {
                                        <div><i class="fa fa-check"></i>Type: Presentation</div>
                                    }
                                }
                            </div>

                        </div>

                        <div class="profile-userbuttons">
                            @{
                                if (eventdetails.IsActive == true)
                                {
                                    if (ScheduleResult == 1)
                                    {
                                        <a href="" class="btn btn-circle green" style="margin-top: 20px;cursor: default;">
                                            <i class="fa fa-check"></i>
                                            Scheduled
                                        </a>
                                        <a href="@Url.Action("DeleteFromAgendaList","Event",new { eventinfodet = eventdetails.Id })" class="btn btn-circle" style="margin-top: 20px; background-color: #ed6b75; color: white;">
                                            <i class="fa fa-times"></i>
                                            Cancel
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("AddtoMyScheduleList","Event",new { eventinfodet = eventdetails.Id })" class="btn btn-circle green" style="margin-top: 20px;">
                                            <i class="fa fa-plus"></i>
                                            Add to My Schedule
                                        </a>
                                    }
                                }
                                else
                                {
                                    <div style="margin-top: 20px;">
                                        <a href="" style="color: #ed6b75; cursor: default;">
                                            The Session is Canceled by Organization
                                        </a>
                                    </div>
                                    
                                }

                            }
                        </div>
                        <div class="profile-usermenu">
                            <ul class="nav">
                            </ul>
                        </div>

                    </div>
                </div>
                <!-- END BEGIN PROFILE SIDEBAR -->
                <!-- BEGIN PROFILE CONTENT -->
                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12" style="padding-right: 0px;">
                            <!-- BEGIN PORTLET -->
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption caption-md">
                                        <i class="icon-bar-chart theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">Description</span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <p> @eventdetails.Content </p>
                                </div>
                            </div>
                            <!-- END PORTLET -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="padding-right: 0px;">
                            <!-- BEGIN PORTLET -->
                            <div class="portlet light ">
                                    <div class="caption caption-md">
                                        <span class="caption-subject font-blue-madison bold uppercase"><i class="fa fa-question-circle"></i>  Ask a Question</span>
                                    </div>
                            </div>
                            <!-- END PORTLET -->
                        </div>
                    </div>
                </div>
                <!-- END PROFILE CONTENT -->
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

