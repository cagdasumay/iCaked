@using EventApp.Models

@{
    ViewBag.Title = "Sponsorlar";
    Partner thispartner = (Partner)ViewData["PartnerDetails"];
    PartnerEventCategory thiscategory = (PartnerEventCategory)ViewData["CategoryDetails"];

    User speaker = (User)ViewData["SpeakerDetails"];

    List<Activity> SpeakerSessions = (List<Activity>)ViewData["SpeakerSessions"];
    List<bool> isScheduled = (List<bool>)ViewData["isScheduled"];

    List<string> times = (List<string>)ViewData["StartEndTimes"];
    List<string> StartDate = (List<string>)ViewData["StartDate"];

    string usertype = (string)ViewData["UserType"];
}

<link href="../assets/pages/css/about.css" rel="stylesheet" type="text/css" />

<div class="page-content-wrapper" style="min-height: 700px !important;">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 700px !important;">
        @{
            String photo = "../PartnerLogo/" + thispartner.Id + ".jpg";
        }
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    @{
                        if (usertype == "Acente")
                        {
                            <a href="@Url.Action("PartnerListEditable","Partners")">Sponsorlar</a>
                        }
                        else if (usertype == "Katılımcı")
                        {
                            <a href="@Url.Action("Partners","Home")">Sponsorlar</a>
                        }
                    }
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@thispartner.Name</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            @thispartner.Name
        </h1>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet stories-cont ">
                        <!-- SIDEBAR USERPIC -->

                        <div class="mt-card-avatar mt-overlay-4" style="text-align: center;">
                            <img src="@photo" class="" alt="">
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name"> @thispartner.Name</div>
                            <div class="profile-usertitle-job" style="font-size: 18px;"> @thiscategory.Name </div>
                        </div>
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li>
                                    @{
                                        if (thispartner.Facebook == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-facebook-square" style="margin-right: 9px;"></i> Facebook
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@thispartner.Facebook" target="_blank">
                                                <i class="fa fa-facebook-square"></i> Facebook
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (thispartner.Twitter == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-twitter" style="margin-right: 9px;"></i> Twitter
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@thispartner.Twitter" target="_blank">
                                                <i class="icon-social-twitter"></i> Twitter
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (thispartner.Instagram == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-instagram" style="margin-right: 9px;"></i> Instagram
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@thispartner.Instagram" target="_blank">
                                                <i class="fa fa-instagram"></i> Instagram
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (thispartner.Linkedin == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-linkedin-square" style="margin-right: 9px;"></i> Linkedin
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@thispartner.Linkedin" target="_blank">
                                                <i class="fa fa-linkedin-square"></i> Linkedin
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (thispartner.Website == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-globe" style="margin-right: 9px;"></i> Website
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@thispartner.Website" target="_blank">
                                                <i class="fa fa-globe"></i> Website
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (thispartner.Youtube == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-youtube" style="margin-right: 9px;"></i> Website
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@thispartner.Youtube" target="_blank">
                                                <i class="fa fa-youtube"></i> Website
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                        <i class="fa fa-google-plus" style="margin-right: 9px;"></i> Google+
                                    </div>
                                </li>
                                <li>
                                    @{
                                        if (thispartner.Pinterest == null)
                                        {
                                            <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                                <i class="fa fa-pinterest-p" style="margin-right: 9px;"></i> Website
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="@thispartner.Pinterest" target="_blank">
                                                <i class="fa fa-pinterest-p"></i> Website
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    <div style="cursor: default; color: #93a3b5; font-size: 16px; font-weight: 400; padding: 10px 15px;">
                                        <i class="fa fa-tumblr-square" style="margin-right: 9px;"></i> Tumblr
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <!-- END MENU -->
                    </div>
                </div>

                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12" style="padding-right: 0px;">
                            <!-- BEGIN PORTLET -->
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption caption-md">
                                        <i class="icon-bar-chart theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">@thiscategory.Name</span>
                                        <span class="caption-helper hide">weekly stats...</span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <p> @thispartner.Introduction </p>
                                </div>
                            </div>
                            <!-- END PORTLET -->
                        </div>
                    </div>
                </div>
                <!-- END PROFILE CONTENT -->
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

