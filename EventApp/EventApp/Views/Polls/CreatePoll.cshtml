@model EventApp.Models.PollQuestion
@using System.Globalization;

@{ 
    ViewBag.Title = "Create Poll";
    String PageDisplay = (String)Session["PageDisplay"];
}

<script type="text/javascript">

    $(document).ready(function () {
        $("#QuestionType").change(function () {
            var type = $("#QuestionType").val();
            $("#back-btn").attr("href", "/Polls/CreatePoll?QuestionType=" + type);
        });

        $("#QQQ").change(function () {
            var type = $("#QQQ").val();
            $("#back-btn").attr("href", "/Polls/AddTextAreaQuestion?QQQ=" + type);
        });

        setTimeout(function () { $(this).scrollTop(0); }, 1);
    });

</script>

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html">Create</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Live Polls</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            Create
            <small>Live Polls</small>
        </h1>
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-green">
                            <i class="icon-question font-green"></i>
                            <span class="caption-subject bold uppercase"> Type The Questions</span>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <form role="form">
                            <div class="form-body">
                                @{
                                    if (PageDisplay == "")
                                    {
                                        using (Html.BeginForm("CreatePoll", "Polls", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <div class="form-horizontal">
                                                <div class="form-group form-md-line-input" style="margin-bottom: 0px;">
                                                    <label class="col-md-2 col-md-offset-2 control-label" style="padding-left: 0px;" for="form_control_1">Question Type</label>
                                                    <div class="col-md-8">
                                                        <div class="form-group form-md-line-input" style="padding-top: 0px;">
                                                            <div class="md-radio-list">
                                                                <div class="md-radio">
                                                                    <input type="radio" id="radio50" name="QuestionType" class="md-radiobtn" value="Text Area">
                                                                    <label for="radio50">
                                                                        <span></span>
                                                                        <span class="check"></span>
                                                                        <span class="box"></span> Text Area
                                                                    </label>
                                                                </div>
                                                                <div class="md-radio">
                                                                    <input type="radio" id="radio51" name="QuestionType" class="md-radiobtn" value="Multiple Choice 1 Select">
                                                                    <label for="radio51">
                                                                        <span></span>
                                                                        <span class="check"></span>
                                                                        <span class="box"></span> Multiple Choice (1 Select)
                                                                    </label>
                                                                </div>
                                                                <div class="md-radio">
                                                                    <input type="radio" id="radio52" name="QuestionType" class="md-radiobtn" value="Multiple Choice Multiple Select">
                                                                    <label for="radio52">
                                                                        <span></span>
                                                                        <span class="check"></span>
                                                                        <span class="box"></span> Multiple Choice (Multiple Selects)
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-actions">
                                                    <div class="row">
                                                        <div class="col-md-offset-8">
                                                            <input type="submit" id="continue-btn" class="btn btn-outline green button-next" value="Continue" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else if (PageDisplay == "Text Area")
                                    {
                                        using (Html.BeginForm("AddTextAreaQuestion", "Polls", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-horizontal">
                                                <div class="form-group form-md-line-input" style="margin-bottom: 0px;">
                                                    <div class="form-group form-md-line-input" style="padding-top: 0px;">
                                                        <div class="md-radio-list">
                                                            <div class="form-group form-md-line-input form-md-floating-label">
                                                                <div class="col-md-offset-2 col-md-8" style="padding-top: 20px;" name>
                                                                    @Html.TextAreaFor(model => model.Question, new { @class = "form-control", @type = "text", @id = "form_control_1" })
                                                                    @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                                                                    <label for="form_control_1">Type Question Here</label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-actions">
                                                    <div class="row">

                                                        <div class="col-md-offset-3 col-md-6">
                                                            <a href="" id="continue-btn" class="btn btn-success">
                                                                Delete
                                                            </a>
                                                            <a href="" id="continue-btn" class="btn btn-success">
                                                                Save & Create New
                                                            </a>
                                                            <input type="submit" id="continue-btn" class="btn btn-success green button-next col-md-offset-1" value="Complete Poll" />
                                                        </div>

                                                        @*<div class="col-md-offset-3 col-md-6">                                                           
                                                            <input type="submit" id="continue-btn" class="btn btn-outline green button-next" value="Delete" />
                                                            <input type="submit" id="continue-btn" class="btn btn-outline green button-next col-md-offset-1" value="Save & Create New" />
                                                            <input type="submit" id="continue-btn" class="btn btn-success green button-next col-md-offset-1" value="Complete Poll" />
                                                        </div>*@
                                                    </div>
                                                </div>
                                            </div>
                                            
                                        }
                                    }
                                }
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>


