@using EventApp.Models
@model EventApp.Models.Event
@using System.Globalization;

@{
    ViewBag.Title = "Sosyal Medya";
    string eventname = (string)ViewData["EventName"];
    Guid EventID = (Guid)ViewData["EventID"];

}

<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        setTimeout(function () { $(this).scrollTop(0); }, 1);
    });
</script>

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("SocialMediaOrg", "Events")">Sosyal Medya</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Düzenle</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            Sosyal Medya
            <small>Düzenle</small>
        </h1>
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet box">
                        <div class="portlet-title" style="background-color: #36c6d3;">
                            <div class="caption">
                                <i class="icon-user-following font-white"></i>
                                <span class="caption-subject font-white sbold">@eventname Sosyal Medya Hesaplarını Düzenle</span>
                            </div>
                        </div>

                        @using (Html.BeginForm("CompleteSocialMedia", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal" style="padding-top: 20px;">

                                <div class="form-group">
                                    <label class="control-label col-md-4">Web Sitesi</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Facebook</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Facebook, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Facebook, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Google+</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.GooglePlus, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.GooglePlus, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Twitter</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Twitter, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Twitter, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Instagram</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Instagram, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Instagram, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Linkedin</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Linkedin, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Linkedin, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Youtube</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Youtube, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Youtube, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Pinterest</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Pinterest, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Pinterest, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Tumblr</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Tumblr, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Tumblr, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-7 col-md-5">
                                        <a href="@Url.Action("SocialMediaOrg","Events")" id="continue-btn" class="btn btn-success">
                                            Geri
                                        </a>
                                        <button href="@Url.Action("CompleteSocialMedia","Events")" id="CompleteConference" name="EventID" value="@EventID" class="btn btn-outline green button-next">
                                            Düzenle
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

