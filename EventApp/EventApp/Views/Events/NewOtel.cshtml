@using EventApp.Models
@model EventApp.Models.Otels
@using System.Globalization;

@{
    ViewBag.Title = "Oteller";

    string NameError = (string)ViewData["NameError"];
    string ImageError = (string)ViewData["ImageError"];
    string LatError = (string)ViewData["LatError"];
    string LonError = (string)ViewData["LonError"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("OtelsEditable", "Events")">Oteller</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Yeni Otel</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            Oteller
            <small>Oluştur</small>
        </h1>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-layers font-white"></i>
                                <span class="caption-subject font-white sbold">Otel Bilgilerini Girin</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            @using (Html.BeginForm("NewOtel", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Otel Adı (*)</label>
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            @{
                                                if (NameError == "NameError")
                                                {
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Otel İsmi Girin </span>
                                                }
                                            }
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Otel Hakkında Bilgi</label>
                                        <div class="col-md-6">
                                            @Html.TextAreaFor(model => model.OtelContent, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.OtelContent, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Yıldız Sayısı</label>
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.StarNumber, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.StarNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Web Sitesi</label>
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Google Koordinatları (*)</label>
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.Lattitude, new { htmlAttributes = new { @placeholder = "Enlem (Örn: 39.9241)", @class = "form-control" } })
                                            @{
                                                if (LatError == "LatError")
                                                {
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Geçerli bir Enlem Girin </span>
                                                }
                                            }
                                        </div>
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @placeholder = "Boylam (Örn: 32.8356)", @class = "form-control" } })
                                            @{
                                                if (LonError == "LonError")
                                                {
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Geçerli bir Boylam Girin </span>
                                                }
                                            }
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Fiyatı/Para Birimi</label>
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.OnePersonPrice, new { htmlAttributes = new { @placeholder = "1 Kişi (Örn. 100.60)", @class = "form-control" } })
                                        </div>
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.Currency, new { htmlAttributes = new { @placeholder = "Para Birimi", @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-md-3">
                                            @Html.EditorFor(model => model.TwoPersonPrice, new { htmlAttributes = new { @placeholder = "2 Kişi (Kişi Başı)", @class = "form-control" } })
                                        </div>
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.ThreePersonPrice, new { htmlAttributes = new { @placeholder = "3 Kişi (Kişi Başı)", @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Görsel 1 (*)</label>
                                        <div class="col-md-6">
                                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                                            <input class="form-control form-control-solid placeholder-no-fix" type="file" id="imageinput" name="imageinput" />
                                            @{
                                                if (ImageError == "ImageError")
                                                {
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Otel Görseli Girin </span>
                                                }
                                            }
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Görsel 2</label>
                                        <div class="col-md-6">
                                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                                            <input class="form-control form-control-solid placeholder-no-fix" type="file" id="imageinput2" name="imageinput2" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Görsel 3</label>
                                        <div class="col-md-6">
                                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                                            <input class="form-control form-control-solid placeholder-no-fix" type="file" id="imageinput3" name="imageinput3" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Görsel 4</label>
                                        <div class="col-md-6">
                                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                                            <input class="form-control form-control-solid placeholder-no-fix" type="file" id="imageinput4" name="imageinput4" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3">Görsel 5</label>
                                        <div class="col-md-6">
                                            <label class="control-label visible-ie8 visible-ie9">Password</label>
                                            <input class="form-control form-control-solid placeholder-no-fix" type="file" id="imageinput5" name="imageinput5" />
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <a href="@Url.Action("OtelsEditable","Events")" id="continue-btn" class="btn btn-success">
                                                Geri
                                            </a>
                                            <button type="submit" id="register-submit-btn" class="btn btn-outline green button-next">Oluştur</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
</div>

