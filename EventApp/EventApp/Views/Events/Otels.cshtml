<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Otels", "Events")">Oteller</a>
                </li>
            </ul>
        </div>
        <h1 class="page-title" style="float: left;">
            Oteller
        </h1>


        @{
            if (CheckIn.ToString() != "00000000-0000-0000-0000-000000000000")
            {
                <a href="@Url.Action("UserCheckInForm","Events", new { UserOtelID = UserOtelID })" id="continue-btn" class="btn btn-outline green button-next" style="float: right; margin-top: 20px; border-color: #ed6b75; background-color: #ed6b75; color: white; margin-right: 10px;">
                    Check-In Yap
                    <i class="fa fa-check"></i>
                </a>
            }
            if (UserOtelID.ToString() != "00000000-0000-0000-0000-000000000000")
            {
                <a href="@Url.Action("UserAccomodation", "Events", new { UserOtelID = UserOtelID})" id="continue-btn" class="btn success green button-next" style="float: right; margin-top: 20px; margin-right: 10px;">
                    <i class="fa fa-home"></i>
                    Konaklama Bilgilerim
                </a>
            }
        }
        
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
                <div class="portfolio-content portfolio-1">
                    <div id="js-grid-juicy-projects" class="cbp">
                        @{
                            for (int i = 0; i < OtelList.Count; i++)
                            {
                                string photo = "../Images/Otels/" + OtelList[i].Id + "1.jpg";
                                <div class="cbp-item web-design logos">
                                    <div class="cbp-caption">
                                        <div class="cbp-caption-defaultWrap">
                                            <img src="@photo" alt="">
                                        </div>
                                        <div class="cbp-caption-activeWrap">
                                            <div class="cbp-l-caption-alignCenter">
                                                <div class="cbp-l-caption-body">
                                                    <a href="@Url.Action("OtelDetails","Events", new { OtelID = OtelList[i].Id})" class="cbp-singlePage cbp-l-caption-buttonLeft btn red uppercase btn red uppercase" rel="nofollow">Detaylı Bilgi</a>
                                                    <a href="@photo" class="cbp-lightbox cbp-l-caption-buttonRight btn red uppercase btn red uppercase" data-title="@OtelList[i].Name">Büyük Boy</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="cbp-l-grid-projects-title uppercase text-center">@OtelList[i].Name</div>
                                </div>
                            }
                        }

                    </div>

                </div>
            </div>
        </div>

        

    </div>
</div>


