@using EventApp.Models

@{
    ViewBag.Title = "Speakers";
    User speaker = (User)Session["speakerinfo"];

    List<Event> ConferenceList = (List<Event>)Session["SpeakersConferenceList"];
}

<link href="../assets/pages/css/about.css" rel="stylesheet" type="text/css" />

<div class="page-content-wrapper" style="min-height: 700px !important;">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 700px !important;">
        @{
            String photo = "../Images/Users/" + speaker.Id + ".jpg";
        }
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html">Speakers</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@speaker.Name @speaker.Surname</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            @speaker.Name @speaker.Surname
        </h1>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet stories-cont ">
                        <!-- SIDEBAR USERPIC -->

                        <div class="profile-userpic photo mt-card-round">
                            <img src="@photo" class="img-responsive" alt="">
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name"> @speaker.Name @speaker.Surname </div>
                            <div class="profile-usertitle-job"> @speaker.CompanyName </div>
                            <div class="profile-usertitle-job"> @speaker.PersonelTitle </div>
                        </div>
                        <!-- END SIDEBAR USER TITLE -->
                        <!-- SIDEBAR BUTTONS -->
                        <div class="profile-userbuttons">
                            <button type="button" class="btn btn-circle green btn-sm">Follow</button>
                            <button type="button" class="btn btn-circle red btn-sm">Message</button>
                        </div>
                        <!-- END SIDEBAR BUTTONS -->
                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li>
                                    @{
                                        if (speaker.Facebook == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-facebook"></i> Facebook
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Facebook">
                                                <i class="icon-social-facebook"></i> Facebook
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Twitter == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-twitter"></i> Twitter
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Facebook">
                                                <i class="icon-social-twitter"></i> Twitter
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Instagram == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-youtube"></i> Instagram
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Instagram">
                                                <i class="icon-social-youtube"></i> Instagram
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Linkedin == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-tumblr"></i> Linkedin
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Linkedin">
                                                <i class="icon-social-tumblr"></i> Linkedin
                                            </a>
                                        }
                                    }
                                </li>
                                <li>
                                    @{
                                        if (speaker.Website == null)
                                        {
                                            <a href="" style="cursor: default;">
                                                <i class="icon-social-dribbble"></i> Website
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@speaker.Website">
                                                <i class="icon-social-dribbble"></i> Website
                                            </a>
                                        }
                                    }
                                </li>
                            </ul>
                        </div>
                        <!-- END MENU -->
                    </div>
                </div>
                <!-- END BEGIN PROFILE SIDEBAR -->
                <!-- BEGIN PROFILE CONTENT -->
                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12" style="padding-right: 0px;">
                            <!-- BEGIN PORTLET -->
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption caption-md">
                                        <i class="icon-bar-chart theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">About</span>
                                        <span class="caption-helper hide">weekly stats...</span>
                                    </div>
                                </div>
                                <div class="portlet-body">
                                    <p> @speaker.About </p>
                                </div>
                            </div>
                            <!-- END PORTLET -->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- BEGIN PORTLET -->
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption caption-md">
                                        <i class="icon-bar-chart theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">Sessions</span>
                                    </div>
                                </div>
                                @{
                                    int conf = ConferenceList.Count;
                                    if (conf > 0)
                                    {
                                        for (int i = conf-1; i >= 0; i--)
                                        {
                                            <div style="border: 1px solid #578ebe; padding: 5px; margin-bottom: 10px; width: 100%;">
                                                
                                                <div style="margin-bottom: 5px">
                                                    <a href="@Url.Action("EventInfoDetails","Event",new { eventinfodet = @ConferenceList[i].Id })" class="title">
                                                        <div style="font-size: 18px;">
                                                            @ConferenceList[i].Name
                                                            <div class="list-datetime" style="float: right !important; font-size: 14px; color: #333;">
                                                                @{
                                                                    if (ConferenceList[i].EventType == 1)
                                                                    {
                                                                        <div>Conference</div>
                                                                    }
                                                                    else if (ConferenceList[i].EventType == 2)
                                                                    {
                                                                        <div>Meeting</div>
                                                                    }
                                                                    else if (ConferenceList[i].EventType == 3)
                                                                    {
                                                                        <div>Presentation</div>
                                                                    }
                                                                    else if (ConferenceList[i].EventType == 4)
                                                                    {
                                                                        <div>Activity</div>
                                                                    }
                                                                    else if (ConferenceList[i].EventType == 5)
                                                                    {
                                                                        <div>Challenge</div>
                                                                    }
                                                                    else if (ConferenceList[i].EventType == 8)
                                                                    {
                                                                        <div>Presentation</div>
                                                                    }
                                                                }
                                                            </div>
                                                        </div>
                                                        
                                                    </a>
                                                    
                                                </div>
                                                <div class="portlet-body" style="padding-top: 0;">
                                                    <div>
                                                        <div class="mt-list-container">
                                                            <div class="mt-list-item" style="border-top: 1px solid #e7ecf1; border-bottom: 1px solid #e7ecf1;">
                                                                <div class="list-datetime" style="margin-top: 5px;">
                                                                    <i class="fa fa-calendar-o"></i>
                                                                    @ConferenceList[i].StartDate
                                                                </div>

                                                                <div style="color:#68717d;">
                                                                    <h5>@ConferenceList[i].Summary</h5>
                                                                </div>
                                                                @{
                                                                    if (ConferenceList[i].IsActive == true)
                                                                    {
                                                                        if (ConferenceList[i].Capacity == "1")
                                                                        {
                                                                            <div style="text-align: center; width: 100%;">
                                                                                <a href="" style="cursor: default;">
                                                                                    <i class="fa fa-check"></i>
                                                                                    Scheduled
                                                                                </a>
                                                                                <a href="@Url.Action("DeleteFromAgendaList","User",new { eventinfodet = ConferenceList[i].Id, sprdet = speaker.Id })" style="color: #ed6b75; margin-left: 15px;">
                                                                                    <i class="fa fa-times"></i>
                                                                                    Cancel
                                                                                </a>
                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <div style="text-align: center; width: 100%;">
                                                                                <a href="@Url.Action("AddtoMyScheduleList","User",new { eventinfodet = ConferenceList[i].Id, sprdet = speaker.Id })" style="text-align: center; width: 100%; color: #578ebe;">
                                                                                    <i class="fa fa-plus"></i>
                                                                                    Add to My Schedule
                                                                                </a>
                                                                            </div>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <div style="text-align: center; width: 100%;">
                                                                            <a href="" style="color: #ed6b75; cursor: default; width: 100%;">
                                                                                <i class="fa fa-warning"></i>
                                                                                The Session is Canceled by Organization
                                                                            </a>
                                                                        </div>                                                                      
                                                                    }

                                                                }
                                                                @*<a>
                                                                    <div style="text-align: center; width: 100%;">
                                                                        <i class="fa fa-plus"></i>
                                                                        Add to My Schedule
                                                                    </div>
                                                                </a>*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                           
                                        }

                                    }
                                }
                                
                            </div>
                            <!-- END PORTLET -->
                        </div>
                    </div>

                </div>
                <!-- END PROFILE CONTENT -->
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

