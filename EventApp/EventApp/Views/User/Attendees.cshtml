@model IEnumerable<EventApp.Models.User>

@{
    ViewBag.Title = "Attendees";
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html">Attendees</a>
                </li>
            </ul>
        </div>

        <div class="portlet-title">
            <div class="portlet-body">
                <div class="inputs" style="margin-bottom: 15px; margin-top: 15px;">
                    <div class="portlet-input input-inline ">
                        <div class="input-icon right">
                            <i class="icon-magnifier"></i>
                            <input type="text" class="form-control form-control-solid" placeholder="search...">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col xs-12">
                <!-- BEGIN TODO SIDEBAR -->
                <div class="todo-ui">
                    <!-- END TODO SIDEBAR -->
                    <!-- BEGIN TODO CONTENT -->
                    <div class="todo-content">
                        <div class="portlet light " style="padding-bottom: 0px !important;">
                            <div class="portlet-body">
                                <div class="row">
                                    @*<div class="col-md-12 col-sm-12 col xs-12">*@
                                        <div class="todo-tasklist">
                                            @foreach (var item in Model)
                                            {
                                                String photo = "../Images/Users/" + item.Id + ".jpg";
                                                if (item.AttenderType == 1)
                                                {
                                                    <div class="col-md-4 col-sm-6 col xs-12">
                                                        <div class="todo-tasklist-item todo-tasklist-item-border-green" style="padding-bottom: 0px !important; margin-bottom: 15px;">
                                                            <a href="@Url.Action("UserDetails","User",new { usrdet = item.Id })">
                                                                <img class="todo-userpic pull-left" src="@photo" width="90px" height="90px">
                                                            </a>
                                                            <div class="todo-tasklist-item-title">
                                                                <a href="@Url.Action("UserDetails","User",new { usrdet = item.Id })">
                                                                    @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Surname)
                                                                </a>
                                                            </div>
                                                            @{
                                                                if (item.PersonelTitle != null)
                                                                {
                                                                    <div class="todo-tasklist-item-text">
                                                                        @Html.DisplayFor(modelItem => item.PersonelTitle)
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="todo-tasklist-item-text">
                                                                        ...
                                                                    </div>
                                                                }
                                                            }
                                                            @{
                                                                if (item.CompanyName != null)
                                                                {
                                                                    <div class="todo-tasklist-item-text">
                                                                        @Html.DisplayFor(modelItem => item.CompanyName)
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <div class="todo-tasklist-item-text">
                                                                        ...
                                                                    </div>
                                                                }
                                                            }
                                                        </div>
                                                    </div>

                                                                    }
                                                                }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END TODO CONTENT -->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

