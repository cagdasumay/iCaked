
@using EventApp.Models

@{
    ViewBag.Title = "Haritalar";
    Map MapDisplay = (Map)ViewData["DisplayMapInformation"];
    string DisplayedMapType = (string)ViewData["DisplayedMapType"];

    string usertype = (string)ViewData["UserType"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    @{
                        if (usertype == "Acente")
                        {
                            <a href="@Url.Action("CreateMap","Maps")">Haritalar</a>
                        }
                        else if (usertype == "Katılımcı")
                        {
                            <a href="@Url.Action("List","Maps")">Haritalar</a>
                        }
                    }
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@MapDisplay.Name</span>
                </li>
            </ul>
        </div>
        <div class="page-title">
            @MapDisplay.Name

        </div>
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">
                    <style>
                        #map {
                            height: 450px;
                            width: 100%;
                        }
                    </style>
                    <div id="map"></div>
                    <script>
                        function initMap() {
                            var uluru = { lat: @MapDisplay.Lattitude, lng: @MapDisplay.Longitude };
                            var map = new google.maps.Map(document.getElementById('map'), {
                                zoom: 15,
                                center: uluru
                            });
                            var marker = new google.maps.Marker({
                                position: uluru,
                                map: map
                            });
                        }
                    </script>
                    <script async defer
                            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_lu0ObgeyFWDC5CvNb7fzHQwKk6pwkzM&callback=initMap">
                    </script>

                </div>
            </div>
        </div>

        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->



    </div>
    <!-- END CONTENT BODY -->
</div>



