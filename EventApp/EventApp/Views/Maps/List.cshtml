@model EventApp.Models.Map
@using EventApp.Models

@{
    ViewBag.Title = "Haritalar";
    List<Map> MapList = (List<Map>)ViewData["MapList"];
}
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("List","Maps")">Haritalar</a>
                </li>
            </ul>
        </div>
        <h1 class="page-title">
            Harita Listesi
        </h1>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-map-signs font-white"></i>
                                <span class="caption-subject font-white sbold">Otel İçi Krokiler</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-hover table-bordered">
                                <tbody>
                                    @{
                                        for (int i = 0; i < MapList.Count; i++)
                                        {
                                            if (MapList[i].Usage == "Kroki")
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@Url.Action("DisplayMap","Maps",new { mapdet = MapList[i].Id })">
                                                            @MapList[i].Name
                                                        </a>
                                                        <a href="@Url.Action("DisplayMap","Maps",new { mapdet = MapList[i].Id })">
                                                            <i class="fa fa-arrow-right" style="float: right;"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-map-marker font-white"></i>
                                <span class="caption-subject font-white sbold">Google Haritaları</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-hover table-bordered">
                                <tbody>
                                    @{
                                        for (int i = 0; i < MapList.Count; i++)
                                        {
                                            if (MapList[i].Usage == "Google")
                                            {
                                                <tr>
                                                    <td>
