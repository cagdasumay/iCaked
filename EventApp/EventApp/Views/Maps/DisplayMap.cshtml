
@using EventApp.Models

@{
    ViewBag.Title = "Haritalar";
    Map MapDisplay = (Map)ViewData["DisplayMapInformation"];
    string DisplayedMapType = (string)ViewData["DisplayedMapType"];

    string usertype = (string)ViewData["UserType"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        @{
            string photo = "";
            if (DisplayedMapType == "Resim")
            {
                photo = "../Images/Maps/" + MapDisplay.Id + ".jpg";
            }
            else if (DisplayedMapType == "PDF")
            {
                photo = "../Images/Maps/" + MapDisplay.Id + ".pdf";
            }
        }
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    @{
                        if (usertype == "Acente")
                        {
                            <a href="@Url.Action("CreateMap","Maps")">Haritalar</a>
                        }
                        else if (usertype == "Katılımcı")
                        {
                            <a href="@Url.Action("List","Maps")">Haritalar</a>
                        }
                    }
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@MapDisplay.Name</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <div class="page-title">
            @MapDisplay.Name

        </div>

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">

                    @{
                        if (DisplayedMapType == "Resim")
                        {
                            <div style="float: left !important; width: 100%;">
                                <embed src="@photo" alt="" style="float: left !important; width: 100%;">
                            </div>
                        }
                        else if (DisplayedMapType == "PDF")
                        {
                            <div style="float: left !important; width: 100%;">
                                <embed src="@photo" alt="" style="float: left !important; width: 100%; height: 700px;">
                            </div>
                        }
                    }
                    
                </div>
            </div>
        </div>

        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->



    </div>
    <!-- END CONTENT BODY -->
</div>



