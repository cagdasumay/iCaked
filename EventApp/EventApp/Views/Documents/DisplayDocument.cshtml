
@using EventApp.Models

@{
    ViewBag.Title = "Dokümanlar";
    Document document = (Document)ViewData["Document"];
    string usertype = (string)ViewData["UserType"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        @{
            string doc = "";
            doc = "../Documents/" + document.Id + ".pdf";
        }
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    @{
                        if (usertype == "Acente")
                        {
                            <a href="@Url.Action("AddDocument", "Documents")">Dokümanlar</a>
                            <i class="fa fa-circle"></i>
                        }
                        else if (usertype == "Katılımcı")
                        {
                            <a href="@Url.Action("List", "Documents")">Dokümanlar</a>
                            <i class="fa fa-circle"></i>
                        }
                    }                   
                </li>
                <li>
                    <span>@document.Name</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <div class="page-title">
            @document.Name

        </div>

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">
                    <div style="float: left !important; width: 100%;">
                        <iframe src="@doc" alt="" style="float: left !important; width: 100%; height: 700px;"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>




