@using EventApp.Models
@model EventApp.Models.InfoBooth
@using System.Globalization;

@{
    ViewBag.Title = "Bilgi Standı";

    InfoBooth Details = (InfoBooth)ViewData["InfoBoothDetails"];
    Guid InfoBoothID = (Guid)ViewData["InfoBoothID"];

    String photo;
    if (Details.PhotoDirectory != "Foto Yok")
    {
        photo = "../Images/InfoBooth/" + Details.Id.ToString() + ".jpg";
    }
    else
    {
        photo = "Foto Yok";
    }

}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("InfoBoothOrg", "InfoBooths")">Bilgi Standı</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@Details.Name</span>
                </li>
            </ul>
        </div>
        <h1 class="page-title" style="float: left;">
            Bilgi Standı
            <small>@Details.Name</small>
        </h1>

        <h1>
            @{
                if (Details.Usage == "Turlar")
                {
                    <a href="" id="continue-btn" class="btn red" style="float: right; margin-left: 5px;">
                        Tura Katıl
                        <i class="fa fa-check"></i>
                    </a>
                }
            }
            <a href="@Url.Action("List", "InfoBooths")" id="continue-btn" class="btn btn-outline green" style="float: right;">
                <i class="fa fa-arrow-left"></i>
                Geri
            </a>         
        </h1>
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-body">
                        <div class="form-horizontal">
                            @{
                                if (photo != "Foto Yok")
                                {
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-3 col-xs-6" style="height: 220px; width: 220px;">
                                            <div class="">
                                                <div class="mt-card-avatar mt-overlay-3">
                                                    <img src="@photo" />
                                                    <div class="mt-overlay">
                                                        <div class="mt-info font-white">
                                                            <div class="mt-card-content">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-offset-1 col-sm-offset-1 col-md-7 col-sm-8 col-xs-offset-1 col-xs-5" style="font-size: 30px;">
                                            @Details.Name
                                        </div>
                                    </div>
                                    <div class="row" style="padding: 7px; border-top: 1px solid #eee; margin-top:60px;">
                                        <div style="font-size: 20px; padding-bottom: 5px;">
                                            Açıklama
                                        </div>
                                        @Details.Content
                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: left; font-size: 30px;">
                                            @Details.Name
                                        </div>
                                    </div>
                                    <div class="row" style="padding: 15px;">
                                        @Details.Content
                                    </div>
                                }
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END CONTENT BODY -->
    </div>
</div>

<!-- BEGIN CORE PLUGINS -->
