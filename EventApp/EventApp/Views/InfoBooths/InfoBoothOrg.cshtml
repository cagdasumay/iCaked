@using EventApp.Models
@model EventApp.Models.InfoBooth
@using System.Globalization;
@{
    ViewBag.Title = "Bilgi Standı";

    List<InfoBooth> InfoBoothList = (List<InfoBooth>)ViewData["InfoBoothList"];
    int CountList = InfoBoothList.Count;
}

<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        $(".delete-type10").click(function () {
            var hidden10 = $(this).attr("data-td");
            $("." + hidden10).slideToggle(200);
        });

    });

</script>

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("InfoBoothOrg", "InfoBooths")">Bilgi Standı</a>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <h1 class="page-title" style="float: left;">
                    Bilgi Standı
                    <small>Oluştur-Düzenle-Sil</small>
                </h1>
                <h1>
                    <a href="@Url.Action("NewInfoBooth", "InfoBooths")" style="float: right;" class="btn green">
                        Yeni Bilgi Ekle
                        <i class="fa fa-plus"></i>
                    </a>
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=" icon-layers font-white"></i>
                                <span class="caption-subject font-white sbold">Bilgi Standı Listesi</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            @{
                                if (CountList > 0)
                                {
                                    <table class="table table-striped table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th> Başlık </th>
                                                <th style="text-align:center; width: 150px;"> İçerik </th>
                                                <th style="text-align:center; width: 80px;"> Düzenle </th>
                                                <th style="text-align:center; width: 80px;"> Sil </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                for (int i = CountList - 1; i >= 0; i--)
                                                {
                                                    String hidden10 = "hidden-td1" + (i + 1);
                                                    <tr>
                                                        <td>
                                                            <a href="@Url.Action("InfoBoothDetailsOrg", "InfoBooths", new { ThisIB = @InfoBoothList[i].Id })">
                                                                @InfoBoothList[i].Name
                                                            </a>
                                                        </td>
                                                        <td style="text-align: center;">@InfoBoothList[i].Usage</td>
                                                        <td style="text-align:center; cursor:pointer;">
                                                            @Html.ActionLink("Düzenle", "EditInfoBooth", new { EditID = @InfoBoothList[i].Id, From = "InfoBoothOrg" })
                                                        </td>
                                                        <td class="pull-left-right delete-type10" data-td="@hidden10" style="text-align:center; cursor:pointer;"> Sil </td>
                                                    </tr>

                                                    <tr>
                                                        <td class="display-none @hidden10">
                                                            <div style="float: left; margin-top: 8px;">
                                                                @InfoBoothList[i].Name silmek istediğinize emin misiniz?
                                                            </div>
                                                        </td>
                                                        <td class="display-none @hidden10"></td>
                                                        <td class="display-none @hidden10">
                                                            <a href="/InfoBooths/InfoBoothOrg" id="continue-btn" class="btn btn-default pull-right" style="text-align:center; margin:0px; margin-right: 8px; border-color: #36c6d3; color: #36c6d3"> Hayır </a>
                                                        </td>
                                                        <td class="display-none @hidden10">
                                                            <a class="btn btn-default green" style="margin-left: 8px; margin-right: 0px;" href="@Url.Action("DeleteInfoBooth", "InfoBooths", new { DeleteIB = InfoBoothList[i].Id })">
                                                                Evet
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                                }
                            }
                            <a href="@Url.Action("NewInfoBooth", "InfoBooths")" id="continue-btn" class="btn btn-outline green button-next">
                                Yeni Bilgi Ekle
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


