@using EventApp.Models
@model EventApp.Models.SurveyActivityQuestion
@using System.Globalization;
@{
    ViewBag.Title = "Anketler";

    List<Activity> ThisSurveys = (List<Activity>)ViewData["SurveyList"];
    List<EventActivity> ThisEventSurvey = (List<EventActivity>)ViewData["EventSurveyList"];
    int count = ThisSurveys.Count;
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("SurveyList","Actvities")">Anketler</a>
                </li>
            </ul>
        </div>
        <h1 class="page-title">
            Anket Listesi
        </h1>

        <div class="row">
            <div class="portlet light portlet-fit bordered" style="background-color: #f0f0f0">
                <div class="portlet-body" style="padding-top: 0px !important;">
                    <div class="mt-element-list">
                        <div class="mt-list-container list-simple" style="background-color: #ffffff">
                            <ul>
                                @{
                                    if (count > 0)
                                    {
                                        for (int i = 0; i < count; i++)
                                        {
                                            if (ThisEventSurvey[i].IsActive == true)
                                            {
                                                <li class="mt-list-item">
                                                    <div class="list-icon-container">
                                                        <i class="fa fa-pencil-square-o"></i>
                                                    </div>
                                                    <a href="@Url.Action("AttendSurvey", "Activities", new { SurveyEventID = ThisEventSurvey[i].Id})" class="list-icon-container done pull-right">
                                                        <i class="icon-arrow-right" style="color: #36c6d3"></i>
                                                    </a>
                                                    <div class="list-item-content">
                                                        <h3 class="">
                                                            <a href="@Url.Action("AttendSurvey", "Activities", new { SurveyEventID = ThisEventSurvey[i].Id})">@ThisSurveys[i].Name</a>
                                                        </h3>
                                                    </div>
                                                </li>
                                            }
                                        }
                                    }
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- END : LISTS -->
    </div>
    <!-- END CONTENT BODY -->
</div>


