@using EventApp.Models
@model EventApp.Models.SurveyActivityQuestion
@using System.Globalization;

@{
    ViewBag.Title = "Etkinlik Sonrası Anket";

    Guid SEID = (Guid)ViewData["SurveyEventID"];
    string Start = (string)ViewData["StartDate"];
    string End = (string)ViewData["EndDate"];
    string EventName = (string)ViewData["EventName"];
    string IsActive = (string)ViewData["IsActive"];
    Activity ThisSurvey = (Activity)ViewData["PES"];
    List<SurveyActivityQuestion> SortedSurveyQuestions = (List<SurveyActivityQuestion>)ViewData["SortedSurveyQuestions"];
    int QNumber = 0;
    if (SortedSurveyQuestions != null)
    {
        QNumber = SortedSurveyQuestions.Count;
    }

    int OrderNumber = QNumber + 1;
    List<int> OptionNumberOfQuestions = (List<int>)ViewData["OptionNumberOfQuestions"];
    List<SurveyQuestionOption> QuestionOptions = (List<SurveyQuestionOption>)ViewData["QuestionOptions"];
    List<string> TypeOfQuestionByOrder = (List<string>)ViewData["TypeOfQuestionByOrder"];

}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("PESurveyOrg", "Activities")">Etkinlik Değerlendirme Anketi</a>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title" style="float: left;">
            @EventName
            @{
                if (IsActive == "false" || IsActive == "true")
                {
                    <small>Ön İzleme</small>
                }
                else
                {
                    <small>Oluştur</small>
                }
            }
            
        </h1>
        <h1>
            @{
                if (IsActive == "true")
                {
                    <a href="@Url.Action("CancelSurveyPES", "Activities", new { SurveyEventID = SEID})" id="continue-btn" class="btn green" style="float: right; margin-left: 5px;">
                        Yayından Kaldır
                        <i class="fa fa-times"></i>
                    </a>
                }
                else if (IsActive == "false")
                {
                    <a href="@Url.Action("CompleteSurveyPES", "Activities", new { SurveyEventID = SEID})" id="continue-btn" class="btn green" style="float: right; margin-left: 5px;">
                        Yayınla
                        <i class="fa fa-check"></i>
                    </a>
                    <a href="@Url.Action("EditPES", "Activities", new { SurveyEventID = SEID})" style="float: right;" class="btn btn-outline green button-next">
                        Düzenle
                        <i class="fa fa-pencil"></i>
                    </a>
                }
                else if (IsActive == "")
                {
                    <a href="@Url.Action("CreatePESDates", "Activities")" style="float: right;" class="btn success green button-next">
                        Etkinlik Sonrası Anketini Oluştur
                        <i class="fa fa-pencil"></i>
                    </a>
                }
            }
        </h1>

        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-pencil font-white"></i>
                                <span class="caption-subject font-white sbold">@EventName Etkinlik Sonrası Anketi</span>
                            </div>
                            <div class="actions">
                                <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                            </div>
                        </div>

                        <div class="portlet-body form">
                            <form class="form-horizontal">
                                @{
                                    if (IsActive != "")
                                    {
                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <label class="control-label col-md-5"><b>Anket Açılış Tarihi:</b></label>
                                                <label class="control-label" style="float: left;">@Start</label>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-5"><b>Anket Kapanış Tarihi:</b></label>
                                                <label class="control-label" style="float: left;">@End</label>
                                            </div>
                                        </div>
                                        <div class="col-md-offset-1 col-md-10" style="border-bottom: 2px solid #32c5d2;"></div>
                                    }
                                }
                                
                                <div class="form-horizontal" style="margin-top: 0px; padding-top: 0px; border-top: 0px;">
                                    @{
                                        if (QNumber > 0 && IsActive != "")
                                        {
                                            <div class="form-actions" style="border-top-color: white;">
                                                <div class="row">
                                                    <div class="col-md-offset-2 col-md-9 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10">
                                                        @{

                                                            for (int i = QNumber - 1; i >= 0; i--)
                                                            {
                                                                if (TypeOfQuestionByOrder[i] == "Klasik")
                                                                {
                                                                    <div style="margin-top:10px;">
                                                                        @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton
                                                                    </div>
                                                                    <div style="border-bottom: 2px solid #eee; padding-top: 20px;"></div>
                                                                }
                                                                else if (TypeOfQuestionByOrder[i] == "Çoktan seçmeli tek seçim")
                                                                {
                                                                    <div style="margin-top:10px;">
                                                                        @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton (Tekli Seçim)
                                                                    </div>
                                                                    <div class="md-radio-list">
                                                                        @{
                                                                            for (int j = QuestionOptions.Count - 1; j >= 0; j--)
                                                                            {
                                                                                if (QuestionOptions[j].SurveyActivityQuestionID == SortedSurveyQuestions[i].Id)
                                                                                {
                                                                                    <div class="md-checkbox">
                                                                                        <input type="checkbox" id="" class="md-checkbox">
                                                                                        <label for="" style="cursor: default">
                                                                                            <span></span>
                                                                                            <span class="check"></span>
                                                                                            <span class="box"></span> @QuestionOptions[j].Option
                                                                                        </label>
                                                                                    </div>
                                                                                }
                                                                            }
                                                                        }
                                                                    </div>
                                                                            }
                                                                            else if (TypeOfQuestionByOrder[i] == "Çoktan seçmeli çoklu seçim")
                                                                            {
                                                                                <div style="margin-top:10px;">
                                                                                    @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton (Çoklu Seçim)
                                                                                </div>
                                                                                <div class="md-radio-list">
                                                                                    @{
                                                                                        for (int j = QuestionOptions.Count - 1; j >= 0; j--)
                                                                                        {
                                                                                            if (QuestionOptions[j].SurveyActivityQuestionID == SortedSurveyQuestions[i].Id)
                                                                                            {
                                                                                                <div class="md-checkbox">
                                                                                                    <input type="checkbox" id="" class="md-checkbox">
                                                                                                    <label for="" style="cursor: default">
                                                                                                        <span></span>
                                                                                                        <span class="check"></span>
                                                                                                        <span class="box"></span> @QuestionOptions[j].Option
                                                                                                    </label>
                                                                                                </div>
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                </div>
                                                                                            }
                                                                                        }
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                                                                        }
                                                                                        else if (IsActive == "" && QNumber <= 0)
                                                                                        {
                                                                                            <div class="form-actions" style="border-top-color: white;">
                                                                                                <div class="row">
                                                                                                    <div>
                                                                                                        <div class="col-md-12" style="font-size: 20px; color: #e73d4a; text-align: center;">
                                                                                                            <b>
                                                                                                                Etkinlik Sonrası Anketi
                                                                                                            </b>
                                                                                                            henüz oluşturulmamış.
                                                                                                        </div>                                                                                                        
                                                                                                    </div>
                                                                                                    
                                                                                                </div>
                                                                                            </div>
                                                                                                    }
                                                                                                    else if (IsActive != "" && QNumber <= 0)
                                                                                                    {
                                                                                                <div class="form-actions" style="border-top-color: white;">
                                                                                                    <div class="row">
                                                                                                        <div>
                                                                                                            <div class="col-md-12" style="font-size: 20px; color: #e73d4a; text-align: center;">
                                                                                                            <b>
                                                                                                                Etkinlik Sonrası Anketi
                                                                                                            </b>
                                                                                                            için henüz soru girilmemiştir.
                                                                                                        </div>                                                                                                        
                                                                                                    </div>
                                                                                                </div>
                                                                                            </div>
                                                                                            }

                                                                                        }
                                

                                </div>
                                <br />
                            </form>
                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
    <!-- END CONTENT BODY -->
</div>

<!-- BEGIN CORE PLUGINS -->
<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
