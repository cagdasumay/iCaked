@using EventApp.Models
@model EventApp.Models.Activity
@using System.Globalization;

@{
    ViewBag.Title = "Oturumlar";

    List<User> SpeakerList = (List<User>)ViewData["PreSpeakerList"];
    int countSpeaker = SpeakerList.Count();
    List<User> ResponsibleList = (List<User>)ViewData["PreResponsibleList"];
    int countResponsible = ResponsibleList.Count();
    List<Map> MapList = (List<Map>)ViewData["PreMapList"];
    int countMap = MapList.Count();

    List<User> AddedSpeakers = (List<User>)ViewData["PreAddedSpeakers"];
    int countAddedSpeakers = AddedSpeakers.Count();
    List<User> AddedResponsibles = (List<User>)ViewData["PreAddedResponsibles"];
    int countAddedResponsibles = AddedResponsibles.Count();
    List<Map> AddedPlaces = (List<Map>)ViewData["PreAddedPlaces"];
    int countAddedPlaces = AddedPlaces.Count();

    List<string> validation = (List<string>)ViewData["PreValidationErrors"];
    string DateCompareError = validation[0];
    string SDateError = validation[1];
    string EDateError = validation[2];
    string NameError = validation[3];
    string SummaryError = validation[4];
    string ContentError = validation[5];

    string BackButton = Session["BackButton"].ToString();

}



<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        setTimeout(function () { $(this).scrollTop(0); }, 1);
    });
</script>

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("ActivityListEditable", "Activities")">Oturumlar</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Yeni Sunum</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            Sunum
            <small>Oluştur</small>
        </h1>
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-body">
                        <div class="mt-element-step">
                            <div class="row step-background-thin">
                                <div class="col-md-6 bg-grey-steel mt-step-col">
                                    <div class="mt-step-number">1</div>
                                    <div class="mt-step-title font-grey-cascade">Oturum Tipini</div>
                                    <div class="mt-step-content font-grey-cascade">Seçin</div>
                                </div>
                                <div class="col-md-6 bg-grey-steel mt-step-col active">
                                    <div class="mt-step-number">2</div>
                                    <div class="mt-step-title font-grey-cascade">Oturum Bilgilerini</div>
                                    <div class="mt-step-content font-grey-cascade">Girin</div>
                                </div>
                            </div>
                        </div>
                        @using (Html.BeginForm("CreatePresentation", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <h3 class="block">Sunum Detaylarını Girin</h3>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Sunum İsmi</label>
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        @{
                                            if (NameError == "NameError")
                                            {
                                                <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Sunum İsmi Girin </span>
                                            }
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Başlama Tarihi & Saati</label>
                                    <div class="col-md-5">
                                        <div class="input-group date form_datetime">
                                            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control string" } })
                                            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                            <span class="input-group-btn">
                                                <button class="btn default date-set" type="button">
                                                    <i class="fa fa-calendar"></i>
                                                </button>
                                            </span>
                                        </div>
                                        @{
                                            if (SDateError == "SDateError")
                                            {
                                                <div>
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Başlama Tarihi & Saati Girin </span>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Bitiş Tarihi & Saati</label>
                                    <div class="col-md-5">
                                        <div class="input-group date form_datetime">
                                            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control string" } })
                                            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                            <span class="input-group-btn">
                                                <button class="btn default date-set" type="button">
                                                    <i class="fa fa-calendar"></i>
                                                </button>
                                            </span>
                                        </div>
                                        @{
                                            if (EDateError == "EDateError")
                                            {
                                                <div>
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Bitiş Tarihi & Saati Girin </span>
                                                </div>
                                            }
                                            else if (DateCompareError == "DateCompareError")
                                            {
                                                <div>
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Başlangıç/Bitiş Zamanı Girin </span>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Sunum Konusu</label>
                                    <div class="col-md-5">
                                        @Html.TextAreaFor(model => model.Summary, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                                        @{
                                            if (SummaryError == "SummaryError")
                                            {
                                                <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;">  Lütfen Sunum Konusunu Girin </span>
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Detaylı Sunum İçeriği</label>
                                    <div class="col-md-5">
                                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                        @{
                                            if (ContentError == "ContentError")
                                            {
                                                <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Konferans İçeriğini Oluşturun </span>
                                            }
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Sunum Konuşmacı(ları)</label>
                                    <div class="col-md-5">
                                        <select name="Speakers" id="Speakers" class="form-control form-control-solid placeholder-no-fix">
                                            <option value=@Guid.Empty>Seçiniz...</option>)
                                            @{
                                                for (int i = 0; i < countSpeaker; i++)
                                                {
                                                    <option value=@SpeakerList[i].Id>@SpeakerList[i].Name @SpeakerList[i].Surname</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <button href="@Url.Action("CreatePresentation","Activities")" id="Speakers" name="Speakers" class="btn btn-success">
                                            Ekle
                                        </button>
                                    </div>
                                </div>

                                <div style="padding-bottom: 15px;">
                                    @{
                                        if (countAddedSpeakers > 0)
                                        {
                                            for (int i = 0; i < countAddedSpeakers; i++)
                                            {
                                                <div class="form-group" style="margin-bottom: 0px;">
                                                    <div name="DeleteSpeaker" id="DeleteSpeaker" value=@AddedSpeakers[i].Id>
                                                        <label value=@AddedSpeakers[i].Id class="control-label col-md-offset-3 col-md-3" style="text-align: left; padding-top: 0px;">
                                                            @AddedSpeakers[i].Name @AddedSpeakers[i].Surname
                                                            <button href="@Url.Action("CreatePresentation","Activities")" id="DeleteSpeaker" name="DeleteSpeaker" value=@AddedSpeakers[i].Id class="btn btn-success white" style="padding-top: 0px; padding-bottom: 4px; color: #e73d4a; padding-left: 2px;">
                                                                <i class="fa fa-times"></i>
                                                            </button>
                                                        </label>
                                                    </div>
                                                </div>

                                            }
                                        }
                                    }
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Sunum Sorumlu(ları)</label>
                                    <div class="col-md-5">
                                        <select name="Responsibles" id="Responsibles" class="form-control form-control-solid placeholder-no-fix">
                                            <option value=@Guid.Empty>Seçiniz...</option>)
                                            @{
                                                for (int j = 0; j < countResponsible; j++)
                                                {
                                                    <option value=@ResponsibleList[j].Id>@ResponsibleList[j].Name @ResponsibleList[j].Surname</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <button href="@Url.Action("CreatePresentation","Activities")" id="Responsibles" name="Responsibles" class="btn btn-success">
                                            Ekle
                                        </button>
                                    </div>
                                </div>

                                <div style="padding-bottom: 15px;">
                                    @{
                                        if (countAddedResponsibles > 0)
                                        {
                                            for (int i = 0; i < countAddedResponsibles; i++)
                                            {
                                                <div class="form-group" style="margin-bottom: 0px;">
                                                    <div name="DeleteResponsible" id="DeleteResponsible" value=@AddedResponsibles[i].Id>
                                                        <label value=@AddedResponsibles[i].Id class="control-label col-md-offset-3 col-md-3" style="text-align: left; padding-top: 0px;">
                                                            @AddedResponsibles[i].Name @AddedResponsibles[i].Surname
                                                            <button href="@Url.Action("CreatePresentation","Activities")" id="DeleteResponsible" name="DeleteResponsible" value=@AddedResponsibles[i].Id class="btn btn-success white" style="padding-top: 0px; padding-bottom: 4px; color: #e73d4a; padding-left: 2px;">
                                                                <i class="fa fa-times"></i>
                                                            </button>
                                                        </label>
                                                    </div>
                                                </div>

                                            }
                                        }
                                    }
                                </div>



                                <div class="form-group">
                                    <label class="control-label col-md-3">Sunum Salon(ları)</label>
                                    <div class="col-md-5">
                                        <select name="Places" id="Places" class="form-control form-control-solid placeholder-no-fix">
                                            <option value=@Guid.Empty>Seçiniz...</option>)
                                            @{
                                                for (int k = 0; k < countMap; k++)
                                                {
                                                    <option value=@MapList[k].Id>@MapList[k].Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <button href="@Url.Action("CreatePresentation","Activities")" id="Places" name="Places" class="btn btn-success">
                                            Ekle
                                        </button>
                                    </div>
                                </div>
                                <div style="padding-bottom: 15px;">
                                    @{
                                        if (countAddedPlaces > 0)
                                        {
                                            for (int i = 0; i < countAddedPlaces; i++)
                                            {
                                                <div class="form-group" style="margin-bottom: 0px;">
                                                    <div name="DeletePlace" id="DeletePlace" value=@AddedPlaces[i].Id>
                                                        <label value=@AddedPlaces[i].Id class="control-label col-md-offset-3 col-md-3" style="text-align: left; padding-top: 0px;">
                                                            @AddedPlaces[i].Name
                                                            <button href="@Url.Action("CreatePresentation","Activities")" id="DeletePlace" name="DeletePlace" value=@AddedPlaces[i].Id class="btn btn-success white" style="padding-top: 0px; padding-bottom: 4px; color: #e73d4a; padding-left: 2px;">
                                                                <i class="fa fa-times"></i>
                                                            </button>
                                                        </label>
                                                    </div>
                                                </div>

                                            }
                                        }
                                    }
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        @{
                                            if (BackButton == "BackToList")
                                            {
                                                <a href="@Url.Action("ActivityListEditable","Activities")" id="continue-btn" class="btn btn-success">
                                                    Geri
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("SelectActivityCategory","Activities")" id="continue-btn" class="btn btn-success">
                                                    Geri
                                                </a>
                                            }
                                        }
                                        <button href="@Url.Action("CreatePresentation","Activities")" id="CompletePresentation" name="CompletePresentation" value="CompletePresentation" class="btn btn-outline green button-next">
                                            Oluştur
                                        </button>
                                    </div>
                                </div>
                            </div>
                                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

