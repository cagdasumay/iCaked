
@model IEnumerable<EventApp.Models.ActivityCategory>

@{
    ViewBag.Title = "Oturumlar";
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("ActivityListEditable", "Activities")">Oturumlar</a>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            Oturum, Etkinlik
            <small>Oluştur</small>
        </h1>
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-body">
                        <div class="mt-element-step">
                            <div class="row step-background-thin">
                                <div class="col-md-6 bg-grey-steel mt-step-col active">
                                    <div class="mt-step-number">1</div>
                                    <div class="mt-step-title font-grey-cascade">Oturum Tipini</div>
                                    <div class="mt-step-content font-grey-cascade">Seçin</div>
                                </div>
                                <div class="col-md-6 bg-grey-steel mt-step-col">
                                    <div class="mt-step-number">2</div>
                                    <div class="mt-step-title font-grey-cascade">Oturum Bilgilerini</div>
                                    <div class="mt-step-content font-grey-cascade">Girin</div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        @using (Html.BeginForm("Routing", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Kategoriler</label>
                                    <div class="col-md-5">
                                        <select name="ActivityCategory" id="ActivityCategory" class="form-control form-control-solid placeholder-no-fix">
                                            <option value=@Guid.Empty>Seçiniz...</option>)
                                            @foreach (var item in Model)
                                            {
                                                if (item.Name == "Konferans" || item.Name == "Sunum" || item.Name == "Kahve Molası-Yemek-Parti" || item.Name == "Panel")
                                                {
                                                    <option value=@Html.DisplayFor(modelItem => item.Id)>@Html.DisplayFor(modelItem => item.Name)</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-offset-6 col-md-1">
                                        <a href="@Url.Action("ActivityListEditable", "Activities")" id="continue-btn" class="btn btn-success">
                                            Geri
                                        </a>
                                    </div>
                                    <div class="col-md-1">
                                        <button type="submit" id="continue-btn" class="btn btn-outline green button-next pull-right" name="ActivityCategory" value="New Activity">Devam</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

