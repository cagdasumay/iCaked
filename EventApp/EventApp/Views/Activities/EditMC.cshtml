@using EventApp.Models
@model EventApp.Models.SurveyActivityQuestion
@using System.Globalization;

@{
    ViewBag.Title = "Anketler";

    Guid ActivityID = (Guid)ViewData["ActivityID"];
    string from = (string)Session["MCFrom"];
    List<SurveyQuestionOption> SavedChoices = (List<SurveyQuestionOption>)ViewData["Options"];
    string ChoiceError = (string)ViewData["OptionError"];
    int MC1ChoiceCount = SavedChoices.Count;

    Activity ThisSurvey = (Activity)ViewData["ThisSurvey"];
    Guid SurveyActivityID = (Guid)ViewData["SurveyActivityID"];

    Guid QID = (Guid)ViewData["QID"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("SurveyListEditable", "Activities")">Anketler</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="@Url.Action("EditSurvey", "Activities", new { SurveyEventID = SurveyActivityID })">@ThisSurvey.Name</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="">Düzenle</a>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title" style="float: left;">
            @ThisSurvey.Name
            <small>Düzenle</small>
        </h1>

        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-pencil font-white"></i>
                                <span class="caption-subject font-white sbold">@ThisSurvey.Name</span>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div role="form" class="form-horizontal">
                                <div class="form body">
                                    @{
                                        using (Html.BeginForm("AddChoice", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <div class="form-group form-md-line-input" style="margin-bottom: 0px; padding-top: 0px;">
                                                <div class="form-group form-md-line-input" style="padding-top: 0px; margin-bottom: 0px;">
                                                    <div class="md-radio-list">
                                                        <div class="form-group form-md-line-input form-md-floating-label" style="padding-top: 0px;">
                                                            <div class="col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10" style="padding-top: 15px;">
                                                                @Html.TextAreaFor(model => model.Quesiton, new { @class = "form-control", @type = "text", @id = "form_control_1" })
                                                                @Html.ValidationMessageFor(model => model.Quesiton, "", new { @class = "text-danger" })
                                                                <label for="form_control_1">Soruyu Buraya Girin</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div>
                                                @{
                                                    if (MC1ChoiceCount > 0)
                                                    {
                                                        for (int i = MC1ChoiceCount-1; i >= 0; i--)
                                                        {
                                                            <div class="form-group" style="margin-bottom: 0px;">
                                                                <div>
                                                                    <label class="control-label col-md-offset-2 col-md-10 col-sm-offset-2 col-xs-offset-1  col-sm-10 col-xs-11" style="text-align: left; padding-top: 0px;">
                                                                        @SavedChoices[i].Option
                                                                        @{
                                                                            TempData["SurveyID"] = ThisSurvey.Id;
                                                                        }
                                                                        <a href="@Url.Action("DeleteChoice","Activities", new { OptionID = SavedChoices[i].Id})" class="btn btn-success white" style="padding-top: 0px; padding-bottom: 4px; color: #e73d4a; padding-left: 2px;">
                                                                            <i class="fa fa-times"></i>
                                                                        </a>
                                                                    </label>
                                                                </div>
                                                            </div>

                                                                                }
                                                                            }
                                                }
                                            </div>

                                            <div class="form-group form-md-line-input" style="margin-bottom: 0px; padding-top: 0px;">
                                                <div class="form-group form-md-line-input" style="padding-top: 0px; margin-bottom: 0px;">
                                                    <div class="md-radio-list">
                                                        <div class="form-group form-md-line-input form-md-floating-label" style="padding-top: 0px;">
                                                            <div class="col-md-offset-2 col-md-8 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10" name="Choice" id="Choice" style="padding-top: 15px;">
                                                                @Html.TextArea("Choice", new { @class = "form-control", @type = "text", @id = "form_control_1" })
                                                                @Html.ValidationMessageFor(model => model.Quesiton, "", new { @class = "text-danger" })
                                                                @{
                                                                    if (ChoiceError == "Correct")
                                                                    {
                                                                        <label for="form_control_1">Seçenek Girin</label>
                                                                    }
                                                                    else if (ChoiceError == "OptionError")
                                                                    {
                                                                        <label for="form_control_1" style="color: #e73d4a">En az 2 tane seçenek girmeniz gerekiyor</label>
                                                                    }
                                                                }

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-actions" style="border-top-color: white;">
                                                <div class="row">
                                                    <div class="col-md-offset-5 col-md-7 col-sm-offset-7 col-sm-5 col-xs-12">
                                                        @{
                                                            if (from == "EditSurvey")
                                                            {
                                                                <a href="@Url.Action("EditSurvey", "Activities", new { SurveyEventID = SurveyActivityID })" name="CancelSurveyID" value="ThisSurvey.Id" id="CompleteConference" class="btn btn-outline" style="color: #e73d4a; border-color: #e73d4a; background-color: white;">
                                                                    İptal
                                                                </a>
                                                            }
                                                            else if (from == "CreateSurveyDetails")
                                                            {
                                                                <a href="@Url.Action("CreateSurveyDetails", "Activities", new { thissurvey = ActivityID })" name="CancelSurveyID" value="ThisSurvey.Id" id="CompleteConference" class="btn btn-outline" style="color: #e73d4a; border-color: #e73d4a; background-color: white;">
                                                                    İptal
                                                                </a>
                                                            }
                                                        }
                                                        
                                                        @{
                                                            TempData["QuestionID"] = QID;
                                                        }
                                                        <input type="submit" value="Yeni Seçenek" class="btn btn-outline green button-next" />
                                                        @{ 
                                                            TempData["QuestionID"] = QID;
                                                            TempData["ActivityID"] = ThisSurvey.Id;
                                                        }
                                                        <button href="@Url.Action("AddChoice","Activities")" name="Complete" value="Complete" id="Complete" class="btn success green button-next">
                                                            Kaydet
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                                            }
                                    }
                                </div>                             
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- END CONTENT BODY -->
<!-- BEGIN CORE PLUGINS -->
<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
<!-- END CORE PLUGINS -->
<!-- BEGIN THEME GLOBAL SCRIPTS -->
<script src="../assets/global/scripts/app.min.js" type="text/javascript"></script>
<!-- END THEME GLOBAL SCRIPTS -->
<!-- BEGIN THEME LAYOUT SCRIPTS -->
<script src="../assets/layouts/layout/scripts/layout.min.js" type="text/javascript"></script>
<script src="../assets/layouts/layout/scripts/demo.min.js" type="text/javascript"></script>
<script src="../assets/layouts/global/scripts/quick-sidebar.min.js" type="text/javascript"></script>
<!-- END THEME LAYOUT SCRIPTS -->


