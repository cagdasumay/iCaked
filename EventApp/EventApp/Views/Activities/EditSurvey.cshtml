@using EventApp.Models
@model EventApp.Models.Activity
@using System.Globalization;

@{
    ViewBag.Title = "Anketler";

    string DateDisplay = (string)ViewData["DateDisplay"];
    string ToEditSurvey = (string)Session["ToEditSurvey"];
    EventActivity ThisSurveyEvent = (EventActivity)ViewData["ThisSurveyEvent"];
    Activity ThisSurvey = (Activity)ViewData["ThisSurvey"];
    string related = (string)ViewData["RelatedActivity"];

    List<SurveyActivityQuestion> SortedSurveyQuestions = (List<SurveyActivityQuestion>)ViewData["SortedSurveyQuestions"];
    int QNumber = SortedSurveyQuestions.Count;
    int OrderNumber = QNumber + 1;
    List<int> OptionNumberOfQuestions = (List<int>)ViewData["OptionNumberOfQuestions"];
    List<SurveyQuestionOption> QuestionOptions = (List<SurveyQuestionOption>)ViewData["QuestionOptions"];
    List<string> TypeOfQuestionByOrder = (List<string>)ViewData["TypeOfQuestionByOrder"];

    Guid EAID = (Guid)ViewData["SurveyActivityID"];

    List<Activity> RegisteredActivities = (List<Activity>)ViewData["RegisteredActivities"];
    Event EventInfo = (Event)ViewData["EventInfo"];
    string SurveyName = (string)ViewData["SurveyName"];
    Guid SurveyID = (Guid)ViewData["SurveyID"];
    Guid RelatedActivity = (Guid)ViewData["RealtedActivity"];
    string EventSelected = (string)ViewData["EventSelected"];
    string DateError = (string)ViewData["DateError"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("SurveyListEditable", "Activities")">Anketler</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="@Url.Action("SurveyDisplayOrg","Activities", new { SurveyEventID = ThisSurveyEvent.Id })">@ThisSurvey.Name</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Düzenle</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            @ThisSurvey.Name
            <small>Düzenle</small>
        </h1>

        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-pencil font-white"></i>
                                <span class="caption-subject font-white sbold">@ThisSurvey.Name</span>
                            </div>
                            <div class="actions">
                                <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                            </div>
                        </div>

                        <div class="portlet-body">
                                @using (Html.BeginForm("EditSurveyInfo", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-horizontal">
                                        <div class="form-group" style="padding-top: 20px;">
                                            <label class="control-label col-md-3">İlgili Etkinlik</label>
                                            <div class="col-md-5">
                                                <select name="SelectedActivity" id="SelectedActivity" class="form-control form-control-solid">
                                                    @{
                                                        if (EventSelected == "Event")
                                                        {
                                                            <option selected value=@EventInfo.Id>@EventInfo.Name</option>
                                                            for (int j = 0; j < RegisteredActivities.Count; j++)
                                                            {
                                                                <option value=@RegisteredActivities[j].Id>@RegisteredActivities[j].Name</option>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <option value=@EventInfo.Id>@EventInfo.Name</option>
                                                            for (int j = 0; j < RegisteredActivities.Count; j++)
                                                            {
                                                                if (RelatedActivity == RegisteredActivities[j].Id)
                                                                {
                                                                    <option selected value=@RegisteredActivities[j].Id>@RegisteredActivities[j].Name</option>;
                                                                }
                                                                else
                                                                {
                                                                    <option value=@RegisteredActivities[j].Id>@RegisteredActivities[j].Name</option>
                                                                }
                                                            }
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3">Anket İsmi</label>
                                            <div class="col-md-5">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3">Bitiş Tarihi & Saati</label>
                                            <div class="col-md-5">
                                                <div class="input-group date form_datetime">
                                                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control string" } })
                                                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                                    <span class="input-group-btn">
                                                        <button class="btn default date-set" type="button">
                                                            <i class="fa fa-calendar"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                                @{
                                                    if (DateError == "DateError")
                                                    {
                                                        <div>
                                                            <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Bitiş Tarihi & Saati Girin </span>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3">Anket Konusu</label>
                                            <div class="col-md-5">
                                                @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="row" style="padding-bottom: 20px;">
                                            <div class="col-md-offset-7 col-md-5">
                                                <button type="submit" id="register-submit-btn" class="btn btn-outline green button-next">
                                                    @{
                                                        TempData["SurveyID"] = SurveyID;
                                                    }
                                                    Anket Bilgilerini Güncelle
                                                </button>
                                            </div>
                                        </div>

                                    </div>
                                                    }
                                
                                <div class="col-md-offset-1 col-md-10" style="border-bottom: 2px solid #32c5d2;"></div>

                                <div class="form-horizontal" style="padding-top: 20px; padding-bottom: 20px;">
                                    <div class="form-actions" style="border-top-color: white;">
                                        <div class="row">
                                            @{
                                                Session["FromPageSurvey"] = "EditSurvey";
                                            }
                                            <a href="@Url.Action("CreateSurveyDetails", "Activities", new { thissurvey = ThisSurvey.Id })" id="continue-btn" class="btn btn-outline green button-next" style="float: right; margin-right: 90px;">
                                                Soru Ekle
                                            </a>
                                        </div>

                                    </div>
                                    @{
                                        if (QNumber > 0)
                                        {
                                            <div class="form-actions" style="border-top-color: white;">
                                                
                                                <div class="row">
                                                    <div class="col-md-offset-2 col-md-9 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10">
                                                        @{

                                                            for (int i = QNumber-1; i >= 0; i--)
                                                            {
                                                                if (TypeOfQuestionByOrder[i] == "Klasik")
                                                                {
                                                                    <div style="margin-top:10px; padding-top: 5px;">
                                                                        @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton
                                                                        <a href="@Url.Action("DelFromEdit","Activities", new { SurveyID = ThisSurvey.Id, QuestionID = SortedSurveyQuestions[i].Id })" name="DelSurveyId" value="@ThisSurvey.Id" class="btn btn-outline" style="color: #e73d4a; text-align: right; float: right; padding-top: 0px; padding-bottom: 0px; background-color: white;">
                                                                            Sil
                                                                        </a>
                                                                        <a href="@Url.Action("EditClassic","Activities",  new { QQQ = SortedSurveyQuestions[i].Id, EditQFrom = "EditSurvey" })" name="DelSurveyId" value="@ThisSurvey.Id" class="btn btn-outline" style="color: #337ab7; text-align: right; float: right; padding-top: 0px; padding-bottom: 0px; background-color: white;">
                                                                            Düzenle
                                                                        </a>
                                                                    </div>
                                                                    <div style="border-bottom: 2px solid #b7b5b5; padding-top: 20px; padding-bottom: 5px;"></div>
                                                                }
                                                                else if (TypeOfQuestionByOrder[i] == "Çoktan seçmeli tek seçim")
                                                                {
                                                                    <div style="margin-top:10px;  padding-top: 5px;">
                                                                        @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton (Tekli Seçim)
                                                                        <a href="@Url.Action("DelFromEdit","Activities", new { SurveyID = ThisSurvey.Id, QuestionID = SortedSurveyQuestions[i].Id })" name="DelSurveyId" value="@ThisSurvey.Id" class="btn btn-outline" style="color: #e73d4a; text-align: right; float: right; padding-top: 0px; padding-bottom: 0px; background-color: white;">
                                                                            Sil
                                                                        </a>
                                                                        <a href="@Url.Action("EditMC","Activities", new { QQQ = SortedSurveyQuestions[i].Id, MCFrom = "EditSurvey" })" class="btn btn-outline" style="color: #337ab7; text-align: right; float: right; padding-top: 0px; padding-bottom: 0px; background-color: white;">
                                                                            Düzenle
                                                                        </a>
                                                                    </div>
                                                                    <div class="md-radio-list" style="padding-bottom: 5px;">
                                                                        @{
                                                                            for (int j = QuestionOptions.Count - 1; j >= 0; j--)
                                                                            {
                                                                                if (QuestionOptions[j].SurveyActivityQuestionID == SortedSurveyQuestions[i].Id)
                                                                                {
                                                                                    <div class="md-checkbox">
                                                                                        <input type="checkbox" id="" class="md-checkbox">
                                                                                        <label for="" style="cursor: default">
                                                                                            <span></span>
                                                                                            <span class="check"></span>
                                                                                            <span class="box"></span> @QuestionOptions[j].Option
                                                                                        </label>
                                                                                    </div>
                                                                                }
                                                                            }
                                                                        }
                                                                    </div>
                                                                            }
                                                                            else if (TypeOfQuestionByOrder[i] == "Çoktan seçmeli çoklu seçim")
                                                                            {
                                                                                <div style="margin-top:10px;  padding-top: 5px;">
                                                                                    @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton (Çoklu Seçim)
                                                                                    <a href="@Url.Action("DelFromEdit","Activities", new { SurveyID = ThisSurvey.Id, QuestionID = SortedSurveyQuestions[i].Id })" name="DelSurveyId" value="@ThisSurvey.Id" class="btn btn-outline" style="color: #e73d4a; text-align: right; float: right; padding-top: 0px; padding-bottom: 0px; background-color: white;">
                                                                                        Sil
                                                                                    </a>
                                                                                    <a href="@Url.Action("EditMC","Activities", new { QQQ = SortedSurveyQuestions[i].Id })" class="btn btn-outline" style="color: #337ab7; text-align: right; float: right; padding-top: 0px; padding-bottom: 0px; background-color: white;">
                                                                                        Düzenle
                                                                                    </a>
                                                                                </div>
                                                                                <div class="md-radio-list" style="padding-bottom: 5px;">
                                                                                    @{
                                                                                        for (int j = QuestionOptions.Count - 1; j >= 0; j--)
                                                                                        {
                                                                                            if (QuestionOptions[j].SurveyActivityQuestionID == SortedSurveyQuestions[i].Id)
                                                                                            {
                                                                                                <div class="md-checkbox">
                                                                                                    <input type="checkbox" id="" class="md-checkbox">
                                                                                                    <label for="" style="cursor: default">
                                                                                                        <span></span>
                                                                                                        <span class="check"></span>
                                                                                                        <span class="box"></span> @QuestionOptions[j].Option
                                                                                                    </label>
                                                                                                </div>
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                </div>
                                                                                            }
                                                                                        }
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                                                                        }
                                    }

                                </div>

                                <div class="form-actions" style="border-top-color: white;">
                                    <div class="row">
                                        <div class="col-md-offset-7 col-md-5 col-sm-offset-7 col-sm-5 col-xs-12">
                                            @{
                                                if (ToEditSurvey == "SurveyDisplayOrg")
                                                {
                                                    <a href="@Url.Action("SurveyDisplayOrg", "Activities", new { SurveyEventID = ThisSurveyEvent.Id})" class="btn btn-outline green button-next">Geri</a>
                                                    <a  href="@Url.Action("SurveyDisplayOrg", "Activities", new { SurveyEventID = ThisSurveyEvent.Id})"class="btn green success button-next">Düzenlemeyi Bitir</a>
                                                }
                                                else if (ToEditSurvey == "SurveyListEditable")
                                                {
                                                    <a href="@Url.Action("SurveyListEditable", "Activities")" class="btn btn-outline green button-next">Geri</a>
                                                    <a href="@Url.Action("SurveyListEditable", "Activities")" class="btn green success button-next">Düzenlemeyi Bitir</a>
                                                }
                                            }

                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                


            </div>
        </div>

    </div>
    <!-- END CONTENT BODY -->
</div>

