@using EventApp.Models
@model EventApp.Models.SurveyActivityQuestion
@using System.Globalization;

@{
    ViewBag.Title = "Anketler";

    string DateDisplay = (string)ViewData["DateDisplay"];
    string IsActive = (string)ViewData["IsActive"];
    EventActivity ThisSurveyEvent = (EventActivity)ViewData["ThisSurveyEvent"];
    Activity ThisSurvey = (Activity)ViewData["ThisSurvey"];
    string related = (string)ViewData["RelatedActivity"];

    List<SurveyActivityQuestion> SortedSurveyQuestions = (List<SurveyActivityQuestion>)ViewData["SortedSurveyQuestions"];
    int QNumber = SortedSurveyQuestions.Count;
    int OrderNumber = QNumber + 1;
    List<int> OptionNumberOfQuestions = (List<int>)ViewData["OptionNumberOfQuestions"];
    List<SurveyQuestionOption> QuestionOptions = (List<SurveyQuestionOption>)ViewData["QuestionOptions"];
    List<string> TypeOfQuestionByOrder = (List<string>)ViewData["TypeOfQuestionByOrder"];
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("SurveyListEditable", "Activities")">Anketler</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>@ThisSurvey.Name</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title" style="float: left;">
            @ThisSurvey.Name
            <small>Ankete Katıl</small>
        </h1>

        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered" style="border-bottom: 0 !important;">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-pencil-square-o font-white"></i>
                                <span class="caption-subject font-white sbold">@ThisSurvey.Name</span>
                            </div>
                            <div class="actions">
                                <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                            </div>
                        </div>

                        <div class="portlet-body form">
                            <form role="form" class="form-horizontal">
                                <div class="form-horizontal">
                                    <div class="form-group" style="padding-top: 13px;">
                                        <label class="control-label col-md-3"><b>Anket ismi:</b></label>
                                        <label class="control-label col-md-9" style="float: left; text-align:left; padding-right: 30px;">@ThisSurvey.Name</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3"><b>Anket Açıklaması:</b></label>
                                        <label class="control-label col-md-9" style="float: left; text-align:left; padding-right: 30px;">@ThisSurvey.Content</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3"><b>Kapanış Tarihi:</b></label>
                                        <label class="control-label col-md-9" style="float: left; text-align:left; padding-right: 30px;">@DateDisplay</label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3"><b>İlgili Oturum:</b></label>
                                        <label class="control-label col-md-9" style="float: left; text-align:left; padding-right: 30px;">@related</label>
                                    </div>
                                </div>
                                <div class="col-md-offset-1 col-md-10" style="border-bottom: 2px solid #32c5d2;"></div>

                                <div class="form-horizontal" style="margin-top: 0px; padding-top: 0px; border-top: 0px;">

                                    @{
                                        if (QNumber > 0)
                                        {
                                            <div class="form-actions" style="border-top-color: white;">
                                                <div class="row">
                                                    <div class="col-md-offset-2 col-md-9 col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10">
                                                        @{

                                                            for (int i = QNumber - 1; i >= 0; i--)
                                                            {
                                                                if (TypeOfQuestionByOrder[i] == "Klasik")
                                                                {
                                                                    <div style="margin-top:10px; padding-top: 5px;">
                                                                        @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton
                                                                    </div>
                                                                    @*<div style="border-bottom: 2px solid #b7b5b5; padding-top: 20px; padding-bottom: 5px;"></div>*@

                                                                    <div class="form-group form-md-line-input radioChange1" style="margin-bottom: 0px; padding-top: 0px;">
                                                                        <div class="form-group form-md-line-input" style="padding-top: 0px; margin-bottom: 0px;">
                                                                            <div class="md-radio-list">
                                                                                <div class="form-group form-md-line-input form-md-floating-label" style="padding-top: 0px;">
                                                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                                                        @Html.TextAreaFor(model => model.Quesiton, new { @class = "form-control", @type = "text", @id = "form_control_1" })
                                                                                        @Html.ValidationMessageFor(model => model.Quesiton, "", new { @class = "text-danger" })
                                                                                        <label for="form_control_1"></label>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                }
                                                                else if (TypeOfQuestionByOrder[i] == "Çoktan seçmeli tek seçim")
                                                                {
                                                                    <div style="margin-top:10px; padding-top: 5px;">
                                                                        @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton (Tekli Seçim)
                                                                    </div>
                                                                    <div class="md-radio-list" style="padding-bottom: 5px;">
                                                                        @{
                                                                            for (int j = QuestionOptions.Count - 1; j >= 0; j--)
                                                                            {
                                                                                string Qorder = i.ToString();
                                                                                string ONumber = j.ToString();
                                                                                string checkbox = "checkbox" + Qorder + "_" + ONumber;
                                                                                string name = "radio" + Qorder;
                                                                                if (QuestionOptions[j].SurveyActivityQuestionID == SortedSurveyQuestions[i].Id)
                                                                                {
                                                                                    <div class="md-radio">
                                                                                        <input type="radio" id="@checkbox" name="@name" value="@j" class="md-checkbox">
                                                                                        <label for="@checkbox" style="cursor: default">
                                                                                            <span></span>
                                                                                            <span class="check"></span>
                                                                                            <span class="box"></span> @QuestionOptions[j].Option
                                                                                        </label>
                                                                                    </div>
                                                                                    
                                                                                }
                                                                            }
                                                                        }
                                                                    </div>
                                                                            }
                                                                            else if (TypeOfQuestionByOrder[i] == "Çoktan seçmeli çoklu seçim")
                                                                            {
                                                                                <div style="margin-top:10px; padding-top: 5px;">
                                                                                    @SortedSurveyQuestions[i].Order. @SortedSurveyQuestions[i].Quesiton (Çoklu Seçim)
                                                                                </div>
                                                                                <div class="md-radio-list" style="padding-bottom: 5px;">
                                                                                    @{
                                                                                        for (int j = QuestionOptions.Count - 1; j >= 0; j--)
                                                                                        {
                                                                                            string Qorder = i.ToString();
                                                                                            string ONumber = j.ToString();
                                                                                            string checkbox = "checkbox" + Qorder + "_" + ONumber;
                                                                                            if (QuestionOptions[j].SurveyActivityQuestionID == SortedSurveyQuestions[i].Id)
                                                                                            {
                                                                                                <div class="md-radio">
                                                                                                    <input type="radio" id="@checkbox" class="md-checkbox">
                                                                                                    <label for="@checkbox" style="cursor: default">
                                                                                                        <span></span>
                                                                                                        <span class="check"></span>
                                                                                                        <span class="box"></span> @QuestionOptions[j].Option
                                                                                                    </label>
                                                                                                </div>
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                </div>
                                                                                            }
                                                                                        }
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                                                                        }
                                    }

                                </div>
                                <div class="row">
                                    <div class="col-md-10 col-sm-11 col-xs-11 col-lg-10">
                                        <button type="submit" id="continue-btn" class="btn btn-outline green button-next" name="ActivityCategory" style="float: right; margin-left:5px;">Anketi Tamamla</button>
                                        <a href="@Url.Action("SurveyList", "Activities")" id="continue-btn" class="btn btn-success" style="float: right;">
                                            Geri
                                        </a>
                                    </div>
                                </div>
                                <br />
                            </form>
                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
    <!-- END CONTENT BODY -->
</div>

