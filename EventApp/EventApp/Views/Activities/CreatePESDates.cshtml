@using EventApp.Models
@model EventApp.Models.Activity
@using System.Globalization;

@{
    ViewBag.Title = "Etkinlik Sonrası Anket";

    Event EventInfo = (Event)ViewData["EventInfo"];

    string PESExists = (string)ViewData["PESExists"];
    string StartDateError = (string)ViewData["StartDateError"];
    string EndDateError = (string)ViewData["EndDateError"];
    string DateCompareError = (string)ViewData["DateCompareError"];
    string DateError = (string)ViewData["DateError"];
}

<script src="~/scripts/jquery-1.10.2.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        setTimeout(function () { $(this).scrollTop(0); }, 1);
    });
</script>

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("PESurveyOrg", "Activities")">Etkinlik Değerlendirme Anketi</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    @{
                        if (PESExists == "PESExists")
                        {
                            <span>Düzenle</span>
                        }
                        else
                        {
                            <span>Oluştur</span>
                        }
                    }
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
            Etkinlik Sonrası Anketi
            <small>Oluştur</small>
        </h1>
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-body">
                        <div class="mt-element-step">
                            <div class="row step-background-thin">
                                <div class="col-md-6 bg-grey-steel mt-step-col active">
                                    <div class="mt-step-number">1</div>
                                    <div class="mt-step-title font-grey-cascade">Anket Bilgilerini</div>
                                    <div class="mt-step-content font-grey-cascade">Girin</div>
                                </div>
                                <div class="col-md-6 bg-grey-steel mt-step-col">
                                    <div class="mt-step-number">2</div>
                                    <div class="mt-step-title font-grey-cascade">Anket Sorularını</div>
                                    <div class="mt-step-content font-grey-cascade">Oluşturun</div>
                                </div>
                            </div>
                        </div>
                        @using (Html.BeginForm("CreatePESDates", "Activities", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <h3 class="block">Anket Açılış - Kapanış Bilgilerini Girin</h3>
                                <div class="form-group">
                                    <label class="control-label col-md-3" style="padding-top: 0px; margin-top: 0px;">İlgili Etkinlik</label>
                                    <div class="col-md-5">
                                        @EventInfo.Name
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3" style="padding-top: 0px; margin-top: 0px;">Anket İsmi</label>
                                    <div class="col-md-5">
                                        Etkinlik Sonrası Anketi
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Başlangıç Tarih & Saati</label>
                                    <div class="col-md-5">
                                        <div class="input-group date form_datetime">
                                            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control string" } })
                                            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                            <span class="input-group-btn">
                                                <button class="btn default date-set" type="button">
                                                    <i class="fa fa-calendar"></i>
                                                </button>
                                            </span>
                                        </div>
                                        @{
                                            if (StartDateError == "StartDateError")
                                            {
                                                <div>
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Açılış Tarihi & Saati Girin </span>
                                                </div>
                                            }
                                            else if (DateError == "DateError")
                                            {
                                                <div>
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Geçerli Bir Giriş Tarihi & Saati Girin </span>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-3">Kapanış Tarih & Saati</label>
                                    <div class="col-md-5">
                                        <div class="input-group date form_datetime">
                                            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control string" } })
                                            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                            <span class="input-group-btn">
                                                <button class="btn default date-set" type="button">
                                                    <i class="fa fa-calendar"></i>
                                                </button>
                                            </span>
                                        </div>
                                        @{
                                            if (EndDateError == "EndDateError")
                                            {
                                                <div>
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Lütfen Kapanış Tarihi & Saati Girin  </span>
                                                </div>
                                            }
                                            else if (DateCompareError == "DateCompareError")
                                            {
                                                <div>
                                                    <span style="display: block; color: #e73d4a; border-width: 1px; border: 1px solid transparent; border-radius: 0!important; box-sizing: border-box; font-size: 14px;"> Kapanış Saati Giriş Saatinden Erken Olmamalı </span>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">

                                        <a href="@Url.Action("PESurveyOrg","Activities")" id="continue-btn" class="btn btn-success">
                                            Geri
                                        </a>
                                        <button type="submit" id="register-submit-btn" class="btn btn-outline green button-next">
                                            Oluştur
                                        </button>
                                    </div>
                                </div>
                            </div>
                                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BEGIN CORE PLUGINS -->
<script src="../assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
