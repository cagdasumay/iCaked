<style>
    #editor-page1,#editor-page2,#editor-page3,#editor-thanks-div {
        width:450px; height:200px;
        left:0px; right:0px;
        top:0px; bottom:0px;
        position:absolute;
        border-radius:5px;
        color:white;
        margin:auto;
        z-index:100001;
    }

    #editor-page1 label,#editor-page2 label,#editor-page3 label,#editor-thanks-div label {
        font-size:16px;
        text-shadow: 0px 1px 1px dimgray;
    }

    .page2-selection img {
            box-shadow: inset 0px 0px 1px 1px white ,0px 0px 10px 0px white;
        width:75px; cursor:pointer;
        transition:ease-in-out 0.1s;
        border-radius:100px;
    }

    .page2-selection img:hover {
        -webkit-filter: drop-shadow(0px 1px 5px gray);
    }

    .page2-selection label {
        width:100%; padding-top:10px; font-size:20px;
        cursor:pointer;
    }
</style>

