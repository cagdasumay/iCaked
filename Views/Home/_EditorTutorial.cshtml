@*@{
    string[] tutorialLabels = new string[] { "Yön Tuşları","Sol Menü","Pasta Tabanı Ekleme","3D / 2D Figürler","Figür Kontrolü","Yazı Ekleme","Kenar Süsü","Orta Süsler","Kopyalama / Silme","Taban Değişimi","Paylaş / Kaydet" };
    string[] tutorialVideos = new string[] { "yon_tuslari", "sol_menu", "taban_ekle", "obje_ekle", "renk_aci", "yazi_ekle", "kenar_susu", "orta_susu", "obje_kopyala_sil", "pasta_altligi", "kaydet_paylas" };
}

<script type="text/javascript">

    $(document).ready(function () {
        $(window).resize(function () {
              $("#editor-tutorial-wrapper").css("height", (parseInt($("#tutorial_inner").css("height").replace("px","")) + 35).toString() + "px");
        });
    });
</script>

<div id="tutorial_inner" style="width:100%; float:left;">

    <label style="width:100%; float:left; text-align:center; border-bottom:1px dashed #d6d6d6; padding-bottom:10px; font-size:14px; color:#3f2518;">Yardım almak istediğiniz konu ile ilgili video'yu izlemek için sol menüdeki butonlara tıklayabilirsiniz.</label>

    <div style="border-right:1px dashed #d6d6d6; padding:10px; float:left;" class="col-md-2 col-sm-3 col-xs-3 tutorial-buttons">
        @{
            for (int i = 0; i < tutorialLabels.Length; i++)
            {
                string tutclass = ""; if (i == 0) { tutclass = "tutorial-active"; }
                <div style="width:100%; float:left;">
                    <label onclick="changeTutorialVideo('@(i+1)',this)" class="yukle_gradient tutorial_buttons @tutclass" style="">@tutorialLabels[i]</label>
                </div>
            }
        }
    </div>

    <div style="float:left; padding:10px;" class="col-md-10 col-sm-9 col-xs-9">
        @{
                for (int i = 0; i < tutorialVideos.Length; i++)
                {
                    string videoUrl = "/Tutorial/" + tutorialVideos[i] + ".webm";
                <video class="tutorial_video_wrapper" controls style="width:100%; float:left;" loop>
                    <source class="tutorial_video_main" src="@videoUrl" type="video/webm" />
                </video>
            }
        }
    </div>
</div>*@