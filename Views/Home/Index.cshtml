    ViewBag.Description = "iCaked hayalinizdeki pastayı gerçeğe dönüştürün veya pastane ürünleri ve parti sepetlerine göz atın";
    ViewBag.Keywords = "pasta, tasarım pasta, online pasta siparişi, online pasta tasarımı, doğum günü pastası, pastane ürünleri, parti sepetleri, ankara pasta siparişi";
    Layout = "/Views/Shared/_Layout.cshtml";
    DatabaseController dc = new DatabaseController();
    UtilityController uc = new UtilityController();

    String code = dc.getIdFromName((string)Session["city"], "Province"); String searchStr = "";

    DataTable bakeries = dc.MemoryCacheByQuery("select * from Bakeries where Province = '" + code + "' and BakeryID <> '98E94E0A-C764-4F99-A2F1-F4915631A891' and BakeryID <> '811C68DA-EDAD-4DE6-977E-B20F1CD1C833'");
    DataTable partners = dc.MemoryCacheByQuery("select * from Bakeries where BakeryID <> '98E94E0A-C764-4F99-A2F1-F4915631A891' and BakeryID <> '811C68DA-EDAD-4DE6-977E-B20F1CD1C833'");

    for (int i = 0; i < bakeries.Rows.Count; i++)
    {
        searchStr = searchStr + " BakeryID = '" + new Guid(bakeries.Rows[i]["BakeryID"].ToString()) + "' or ";
    }

    searchStr = searchStr.Substring(0, searchStr.Length - 4);

    List<DataRow> newProducts = dc.ArrangeProductsByBakery(dc.MemoryCacheByQuery("select * from Products where Approved = 'yes' and Priority = '1' and (" + searchStr + ")"));
    List<DataRow> promotionProducts = dc.ArrangeProductsByBakery(dc.MemoryCacheByQuery("select * from Products where Approved = 'yes' and Priority = '2' and (" + searchStr + ")"));

    String sehir = (string)Session["city"];
}

