@using Cake.Controllers
@using System.Data

@{
    DatabaseController dc = new DatabaseController();
    DataRow bakery = (DataRow)Session["bakeryinfo"];

    DataTable cakeContents = dc.DBQueryGetter("select * from BakeryContents where BakeryID = '" + bakery["BakeryID"] + "' and Type = 'cake'");
    DataTable cupcakeContents = dc.DBQueryGetter("select * from BakeryContents where BakeryID = '" + bakery["BakeryID"] + "' and Type = 'cupcake'");
    DataTable cookieContents = dc.DBQueryGetter("select * from BakeryContents where BakeryID = '" + bakery["BakeryID"] + "' and Type = 'cookie'");
}

<label style="float:left; font-size:30px; padding:15px 0px; padding-top:0px; width:100%; border-bottom:1px solid #e6e6e6; margin-bottom:30px !important; text-align:left; color:#3f2518; line-height:initial;">Ürün İçerikleri</label>

<div id="cakeContentDialog">
    @using (Html.BeginForm("AddEditBakeryContent", "Bakery", FormMethod.Post, new { id = "addCakeContentForm", onsubmit = "validateAddContent(this)" }))
    {
        <div style="width:100%; float:left; text-align:center;">
            <img src="~/Images/Site/cake_vector_icon.png" style="width:50px; margin:10px 0px; -webkit-filter: drop-shadow(0px 1px 2px gray);" />
        </div>
        <div style="width:100%; float:left;">
            <label style="float:left; width:100%; text-align:center; font-size:14px;">İç Malzeme</label>
        </div>
        <div style="width:100%; float:left; margin-top:10px;">
            <div style="width:100%; float:left; text-align:center;">
                <input autocomplete="off" name="content" type="text" style="border:1px solid #cccccc; border-radius:3px; background:white; width:100%; padding:7px 5px;" placeholder="Örn. Çikolatalı,Cevizli,Kestaneli" />
            </div>
        </div>
        <div style="width:100%; float:left; margin-top:10px;">
            <div style="width:50%; float:left; text-align:center;">
                <input type="submit" class="cart_gradient" value="Tamam" style="float:left;" />
            </div>
            <div style="width:50%; float:left; text-align:center;">
                <label onclick="clearBakeryContent('cake')" class="yukle_gradient" style="font-size:16px; font-weight:400; padding:5px 10px; float:right;">İptal</label>
            </div>
        </div>
        <input type="hidden" name="ID" value="" />
        <input type="hidden" name="what" value="add" />
        <input type="hidden" name="type" value="cake" />
        <input type="hidden" name="bakeryID" value="@bakery["BakeryID"]" />
    }
</div>

