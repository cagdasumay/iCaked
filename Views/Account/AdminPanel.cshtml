                                        <label id="admin-bulk-link">İstatistikler</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row admin-menu-div" id="admin-orders-div" style="display:inline-block;">
            @Html.Partial("AdminOrders", ViewData)
        </div>
        <div class="row admin-menu-div" id="admin-reports-div">
            @Html.Partial("AdminReports", ViewData)
        </div>
        <div class="row admin-menu-div" id="admin-objects-div">
            @Html.Partial("AdminObjects", ViewData)
        </div>
        <div class="row admin-menu-div" id="admin-products-div">
            @Html.Partial("AdminProducts", ViewData)
        </div>
        @*<div class="row admin-menu-div" id="admin-comments-div">
            @Html.Partial("AdminComments", ViewData)
        </div>*@
        <div class="row admin-menu-div" id="admin-multiple-div">
            @Html.Partial("AdminOverallUpload", ViewData)
        </div>
        <div class="row admin-menu-div" id="admin-photos-div">
