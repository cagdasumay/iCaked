@using System.Data

@{
    ViewBag.Title = "Bakery Login";
    Layout = "/Views/Shared/_Layout.cshtml";
    bool isLoginAlreadyTried = (ViewData["loginFailed"] != null);
}

<div class="container">
    <div class="row">
        <div class="col-md-12" style="padding:0px;">
            <div style="width:100%; float:left; height:500px; padding-top:50px;">
                <img alt="pastane girişi" src="~/Images/Site/baker_icon.png" style="width:40px; float:left; margin-right:15px;" />
                <h1 style="float:left; padding-bottom:5px; padding-top:5px; margin-bottom:40px !important; border-bottom:1px solid #cccccc; font-size:24px;">
                    iCaked.com - Bakery Login
                </h1>
                <form id="bakery_login_form" action="@Url.Action("BakeryLoginTrial","Account")">
                    <div class="bakeryLogin-input-wrapper">
                        <input autocomplete="off" id="bakery_username" name="bakery_username" type="text" placeholder="Username" />
                    </div>
                    <div class="bakeryLogin-input-wrapper">
                        <input autocomplete="off" id="bakery_password" name="bakery_password" type="password" placeholder="Password" />
                    </div>
                    <div id="bakery-login-validation-div" style="width:400px; margin-bottom:20px; float:left;">
                        <img alt="pasta girişi yükleniyor" id="bakery-loading" src="~/Images/Site/loading_mini.gif" style="float:left; padding-right:10px; width:25px; display:none;" />
                        @{
                            if (isLoginAlreadyTried)
                            { <label style="float:left; font-weight:400; font-size:12px; color:red;">Login failed. Please check your details and try again.</label> }
                            else
                            { <label style="float:left; font-weight:400; font-size:12px; display:none; color:red;"></label> }
                        }
                    </div>
                    <div class="bakeryLogin-input-wrapper">
                        <input type="submit" id="bakeryLogin-btn" value="Login" class="black-gradient" style="width:100px; text-align:center;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>