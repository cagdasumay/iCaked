<link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">

<style>

.tutorialSteps {
    width:100%;
    z-index:999999999;
    position:absolute;
    text-align: center;
    display:none;
}

.tutorialSteps div {
    width:100%; float:left; text-align:center;
}

.tutorialHeaders{
    font-family: 'Indie Flower', cursive;
    color:white;
    text-align:center;
    font-size:26px;
}

.tutorial-upleft {
    width:100px;
    margin-right:25%;
}

.tutorialClose {
    transition:ease-in-out 0.1s; font-size:18px; margin-top:30px; cursor:pointer;
}

.tutorialClose:hover {
    font-weight:600 !important;
}
</style>

<script type="text/javascript">

    var desktopDevice = !isMobile();

    $(document).ready(function () {
        //if (!desktopDevice) { $("#editor-start-wrapper").remove(); }
        $("#editor-start-wrapper").remove();
        //$(".tutorialClose").click(function () { finishTutorial(); desktopDevice = false; });
    });

    function TutorialManualCall(elem) {
        if (desktopDevice) {
            $('.tutorialSteps').fadeOut(300); $('#tutorial' + elem).fadeIn(500);

            $(".add-cake").attr("onclick", "$('#tutorialS3').fadeOut(1200)");
            $(".add-obj").attr("onclick", "$('#tutorialS4').fadeOut(1200)");
            $(".add-side").attr("onclick", "$('#tutorialS6').fadeOut(1200)")
            $("#add-relief-input").attr("onkeydown", "$('#tutorialS7').fadeOut(1200)");
            $(".objectTextures").attr("onclick", "$('#tutorialS8').fadeOut(1200)");
        }
    }

    function nextbuttonAnimation() {
        $("#canvas-next button").removeClass("demo");
        setTimeout(function () {
            $("#canvas-next button").addClass("demo");
        }, 1);
        $("#canvas-next button").removeClass("demo");
    }

    function closeTutorialStep() {

    }

    function finishTutorial() {
        $('.tutorialSteps').fadeOut(300); desktopDevice = false;
        $.ajax({
            url: "/Home/sendTutorialCookie",
            type: 'POST',
            cache: false,
            success: function (result) {
            }
        });
    }
</script>

