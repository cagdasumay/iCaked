@using System.Data
@using Cake.Controllers

@{
    ViewBag.Title = "Parti Sepetleri - Partinizi Renklendirin !";
    ViewBag.Keywords = "parti sepeti, parti sepetleri, doğum günü sepeti, parti ürünleri, parti siparişi, parti ürünleri siparişi, parti sepeti sipariş, ankara parti sepeti, istanbul parti sepeti";
    ViewBag.Description = "iCaked pastanızın yanında partinizi renklendirmek için sayısız ürün arasından parti sepeti seçme imkanı sunuyor.";
    Layout = "/Views/Shared/_Layout.cshtml";
    DataTable products = (DataTable)ViewData["market"];
    List<string> categories = (List<string>)ViewData["categories"];
    UtilityController uc = new UtilityController();
}

<div class="container">

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="row">
                <div class="col-md-12" style="padding:0px 5px;">
                    <div class="row" id="market-party-filter-div">
                        <div class="col-md-6 col-sm-4 col-xs-12" style="padding:0px; margin-top:20px;">
                            <label style="width:100%; float:left; font-size:22px; line-height:46px; color:#3f2518;">Parti Sepetleri</label>
                        </div>
                        <div class="col-md-6 col-sm-8 col-xs-12" style="padding:0px;  margin-top:20px;">
                            <select id="product-sort" class="filter-dropdowns" onchange="sortProducts($(this).find(':selected').attr('data-sort'), '#party-product-div')">
                                <option selected disabled>  Sıralama </option>
                                <option data-sort="Rating desc">  En Çok Satanlar </option>
                                <option data-sort="AddDate desc"> En Yeniler      </option>
                                <option data-sort="Price desc">   En Yüksek Fiyat </option>
                                <option data-sort="Price asc">    En Düşük Fiyat  </option>
                            </select>
                            <div style="float:right; margin-right:20px; margin-top:4px; padding-bottom: 15px;" class="remove-filters">
                                <img src="~/Images/Site/close_icon2.png" class="remove-filters" style="width:10px; margin-right:5px;" />
                                <label style="font-size:13px; font-weight:400;" class="remove-filters">kaldır</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row scroll" id="party-product-div" style="height:510px; overflow:auto;">

                @{
                    for (int i = 0; i < products.Rows.Count; i++)
                    {
                        DataRow urun = products.Rows[i]; String product_thumbnail = "/Images/Products/" + urun["ProductID"] + "/" + (urun["Thumbnail"].ToString().Split(' '))[0];
                        if (urun["Category"].ToString() == "Parti Malzemeleri")
                        {
                            TimeSpan ts = DateTime.Now - Convert.ToDateTime(urun["AddDate"]);
                            <div class="col-md-2 col-sm-4 col-xs-6 product-div-wrapper" data-bakery="@urun["BakeryID"]" data-category="@urun["Category"]" data-date="@ts.Days" data-price="@urun["Price"]" data-rating="@urun["Rating"]">
                                <div class="product-div" style="margin-bottom:20px;">
                                    <a href="@Url.Action("Product","Bakery", new { ProductID = urun["ProductID"] })" style="text-decoration:none; color:black;">
                                        <div class="product-img-div" style="position:relative; float:left;">
                                            <img src="@product_thumbnail" class="product-thumbnail" />
                                        </div>
                                    </a>
                                    <div class="product-description-div">
                                        <div style="float:left; width:100%;" class="product-name-div">
                                            <label class="product-name">@urun["Name"]</label>
                                        </div>
                                        <div style="float:right; width:100%;">
                                            <label class="product-price">@uc.ArrangePrice(urun["Price"].ToString().Split(' ')[0]) <span style="font-size:10px;">@urun["Currency"]</span></label>
                                            <div class="obj-mask" style="float:right; display:none; width:100%; text-align:center;">
                                                <label onclick="AddProductChecker('@urun["ProductID"]')" data-productID="@urun["ProductID"]" class="cart_gradient add-product-direct" style="cursor:pointer; font-size:12px; color:white; text-decoration:none; outline:none;"><img src="~/Images/Site/cart_icon_white.png" style="float:left; border:none; width:15px; margin-right:8px; " />Ekle</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>